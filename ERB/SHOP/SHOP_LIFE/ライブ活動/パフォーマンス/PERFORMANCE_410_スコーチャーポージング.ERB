;パフォーマンスカードの定義
;-------------------------------------------------
;パフォーマンスカード名称
;-------------------------------------------------
@PERFORMANCE_CARDNAME_410
RESULTS:0 = スコーチャーポージング

;-------------------------------------------------
;パフォーマンス分類
;-------------------------------------------------
@PERFORMANCE_CATEGORY_410(ARG:0)
#DIMS カード属性
VARSET カード属性
カード属性 '= DIC_SET(カード属性, "属性", "GESTURE")
カード属性 '= DIC_SET(カード属性, "演目", "PASSION")
RESULTS = %カード属性%



;-------------------------------------------------
;パフォーマンスコマンド名称
;-------------------------------------------------
@PERFORMANCE_COMNAME_410
RESULTS:0 = スコーチャーポージング

;-------------------------------------------------
;アンロック条件
;-------------------------------------------------
@PERFORMANCE_AVAILABLE_410
RETURN 1

;-------------------------------------------------
;セット可能なキャラクター条件
;-------------------------------------------------
@PERFORMANCE_SETTABLE_BY_CHARA_410(ARG:0)
IF ABL:(ARG:0):演技力ＰＡ >= 70
	RETURN 1
ENDIF
RETURN 0

;-------------------------------------------------
;キャラがカードをセット可能できない場合の説明
;-------------------------------------------------
@PERFORMANCE_SETTABLE_DESC_410(ARG:0)
RESULTS:0 = 演技力ＰＡ70以上が必要 

;-------------------------------------------------
;演目で使用可能となる条件
;-------------------------------------------------
@PERFORMANCE_PLAYABLE_410
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@PERFORMANCE_MAIN_410(ARG:0)
#DIMS カード効果
VARSET カード効果
カード効果 '= DIC_SET(カード効果, "抵抗値変更", @"%TOSTR(-5 - (5 * P_コンボ数))%")
カード効果 '= DIC_SET(カード効果, "補正値変更", @"0,0,%TOSTR(15 + (5 * P_コンボ数))%,0,")
P_コンボ数 = 0
RESULTS = %カード効果%

;-------------------------------------------------
;プレイ時のメッセージ
;-------------------------------------------------
@PERFORMANCE_PLAY_MESSAGE_410(ARG:0)
PRINTFORML %ANAME(ARG:0)%の、焼け付くほど熱い決めポーズが観客をも巻き込んで燃え上がっていく！

;-------------------------------------------------
;ステータス描写
;-------------------------------------------------
@PERFORMANCE_STATUS_DESC_410
RESULTS = 心理抵抗値-5\%-(CHAIN数x5) 補正:PA+15\%+(CHAIN数x5) CHAIN数RESET
