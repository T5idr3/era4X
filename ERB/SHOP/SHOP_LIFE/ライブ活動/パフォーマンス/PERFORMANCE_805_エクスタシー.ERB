;-------------------------------------------------
@PERFORMANCE_MAIN_805(ARG:0)
#DIMS カード効果
VARSET カード効果
IF P_トークン数:P_トークン_快楽 == 0
    カード効果 '= DIC_SET(カード効果, "補正値変更", "0,0,0,20,")
ELSE
    カード効果 '= DIC_SET(カード効果, "補正値変更", "0,0,0,20,")
    カード効果 '= DIC_SET(カード効果, "ACT値変更", "1")
    カード効果 '= DIC_SET(カード効果, "任意カード追加", "805")
    P_トークン数:P_トークン_快楽 --
ENDIF
CALL FUCK(ARG:0, "Ｃ, 自慰, 欲望, 露出")


