;パフォーマンスカードの定義
;-------------------------------------------------
;パフォーマンスカード名称
;-------------------------------------------------
@PERFORMANCE_CARDNAME_804
RESULTS:0 = ストリップ

;-------------------------------------------------
;パフォーマンス分類
;-------------------------------------------------
@PERFORMANCE_CATEGORY_804
#DIMS カード属性
VARSET カード属性
カード属性 '= DIC_SET(カード属性, "属性", "GESTURE")
カード属性 '= DIC_SET(カード属性, "演目", "LEWD")
RESULTS = %カード属性%


;-------------------------------------------------
;パフォーマンスコマンド名称
;-------------------------------------------------
@PERFORMANCE_COMNAME_804
RESULTS:0 = ストリップ

;-------------------------------------------------
;アンロック条件
;-------------------------------------------------
@PERFORMANCE_AVAILABLE_804
RETURN 1

;-------------------------------------------------
;セット可能なキャラクター条件
;-------------------------------------------------
@PERFORMANCE_SETTABLE_BY_CHARA_804(ARG:0)
IF ABL:(ARG:0):露出 >= 3 && CFLAG:(ARG:0):陥落済み
    RETURN 1
ENDIF
RETURN 0

;-------------------------------------------------
;キャラがカードをセット可能できない場合の説明
;-------------------------------------------------
@PERFORMANCE_SETTABLE_DESC_804(ARG:0)
RESULTS:0 = 陥落済かつ露出3以上が必要 

;-------------------------------------------------
;演目で使用可能となる条件
;-------------------------------------------------
@PERFORMANCE_PLAYABLE_804
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@PERFORMANCE_MAIN_804(ARG:0)
#DIMS カード効果
VARSET カード効果
CALL PERFORMANCE_STRIP(ARG:0)
P_脱衣衣装名 = %RESULTS%
LOCAL = RESULT + 1
カード効果 '= DIC_SET(カード効果, "補正値変更", @"0,0,0,%TOSTR(10 * LOCAL)%,")
IF RESULT:1 != -1
    CALL GET_CLOTH_NAME((RESULT:1), (P_ステージ衣装:0:(RESULT:1)))
ELSE
    P_脱衣衣装名 '= "なし"
ENDIF
CALL FUCK(ARG:0, "欲望, 露出")
RESULTS = %カード効果%

;-------------------------------------------------
;プレイ時のメッセージ
;-------------------------------------------------
@PERFORMANCE_PLAY_MESSAGE_804(ARG:0)
IF P_脱衣衣装名 != "なし"
    PRINTFORML %ANAME(ARG:0)%は%P_脱衣衣装名%をゆっくりと脱ぎおろすと、客席に放り投げた！
ELSE
    PRINTFORML %ANAME(ARG:0)%は既に一糸まとわぬ状態だ！
ENDIF

;-------------------------------------------------
;ステータス描写
;-------------------------------------------------
@PERFORMANCE_STATUS_DESC_804
