;パフォーマンスカードの定義
;-------------------------------------------------
;パフォーマンスカード名称
;-------------------------------------------------
@PERFORMANCE_CARDNAME_605
RESULTS:0 = CINDERELLA BREATH

;-------------------------------------------------
;パフォーマンス分類
;-------------------------------------------------
@PERFORMANCE_CATEGORY_605(ARG:0)
#DIMS カード属性
VARSET カード属性
カード属性 '= DIC_SET(カード属性, "属性", "SPECIAL")
RESULTS = %カード属性%

;-------------------------------------------------
;パフォーマンスコマンド名称
;-------------------------------------------------
@PERFORMANCE_COMNAME_605
RESULTS:0 = CINDERELLA BREATH

;-------------------------------------------------
;アンロック条件
;-------------------------------------------------
@PERFORMANCE_AVAILABLE_605
FOR LOCAL, 0, CHARANUM
	SIF CFLAG:LOCAL:所属 != 国家ID_プレイヤー
		CONTINUE
	SIF !TALENT:LOCAL:超銀河アイドル
		CONTINUE
	RETURN 1
NEXT
RETURN 0

;-------------------------------------------------
;アンロック条件ヒント
;-------------------------------------------------
@PERFORMANCE_UNLOCK_HINT_DESC_605
RESULTS:0 = "アイドルの頂点"に立つことにより解放

;-------------------------------------------------
;セット可能なキャラクター条件
;-------------------------------------------------
@PERFORMANCE_SETTABLE_BY_CHARA_605(ARG:0)
RETURN TALENT:(ARG:0):超銀河アイドル != 0

;-------------------------------------------------
;キャラがカードをセット可能できない場合の説明
;-------------------------------------------------
@PERFORMANCE_SETTABLE_DESC_605(ARG:0)
RESULTS:0 = "アイドルの頂点"の景色を見た者にのみ使用可能

;-------------------------------------------------
;演目で使用可能となる条件
;-------------------------------------------------
@PERFORMANCE_PLAYABLE_605
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@PERFORMANCE_MAIN_605(ARG:0)
#DIMS カード効果
VARSET カード効果
カード効果 '= DIC_SET(カード効果, "手札ドロー", "20")
カード効果 '= DIC_SET(カード効果, "ACT値変更", "3")
RESULTS = %カード効果%

;-------------------------------------------------
;プレイ時のメッセージ
;-------------------------------------------------
@PERFORMANCE_PLAY_MESSAGE_605(ARG:0)
PRINTFORML %ANAME(ARG:0)%は目を閉じ呼吸を落ち着け、精神を集中する
PRINTFORML 今までの数多くのステージの思い出たちが%ANAME(ARG:0)%の脳内を横切っていく
PRINTFORML ――次の瞬間、%ANAME(ARG:0)%の脳内に、最善のパフォーマンスへの道筋が描かれる！

;-------------------------------------------------
;ステータス描写
;-------------------------------------------------
@PERFORMANCE_STATUS_DESC_605
RESULTS = 手札を{P_手札最大数}枚になるまでドロー ACT +3
