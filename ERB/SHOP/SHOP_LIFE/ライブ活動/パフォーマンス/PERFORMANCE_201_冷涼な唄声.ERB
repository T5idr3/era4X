;パフォーマンスカードの定義
;-------------------------------------------------
;パフォーマンスカード名称
;-------------------------------------------------
@PERFORMANCE_CARDNAME_201
RESULTS:0 = 冷涼な唄声

;-------------------------------------------------
;パフォーマンス分類
;-------------------------------------------------
@PERFORMANCE_CATEGORY_201(ARG:0)
#DIMS カード属性
VARSET カード属性
カード属性 '= DIC_SET(カード属性, "属性", "VOCAL")
カード属性 '= DIC_SET(カード属性, "演目", "COOL")
RESULTS = %カード属性%


;-------------------------------------------------
;パフォーマンスコマンド名称
;-------------------------------------------------
@PERFORMANCE_COMNAME_201
RESULTS:0 = 冷涼な唄声

;-------------------------------------------------
;アンロック条件
;-------------------------------------------------
@PERFORMANCE_AVAILABLE_201
RETURN 1

;-------------------------------------------------
;セット可能なキャラクター条件
;-------------------------------------------------
@PERFORMANCE_SETTABLE_BY_CHARA_201(ARG:0)
RETURN 1

;-------------------------------------------------
;演目で使用可能となる条件
;-------------------------------------------------
@PERFORMANCE_PLAYABLE_201
;【幕間】以降
IF P_経過ターン数 >= (P_ターン数 / 3)
    RETURN 1
ELSE
    RETURN 0
ENDIF

;-------------------------------------------------
;プレイ不可のメッセージ
;-------------------------------------------------
@PERFORMANCE_NOTPLAYABLE_MESSAGE_201(ARG:0)
PRINTFORMW 【幕間】以降のタイミングでのみプレイ可


;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@PERFORMANCE_MAIN_201(ARG:0)
#DIMS カード効果
VARSET カード効果
カード効果 '= DIC_SET(カード効果, "補正値変更", "20,0,0,0,")
カード効果 '= DIC_SET(カード効果, "抵抗値変更", "-5")
RESULTS = %カード効果%

;-------------------------------------------------
;プレイ時のメッセージ
;-------------------------------------------------
@PERFORMANCE_PLAY_MESSAGE_201(ARG:0)
PRINTFORML %ANAME(ARG:0)%の透き通るような唄声が、空間を包み込む……

;-------------------------------------------------
;ステータス描写
;-------------------------------------------------
@PERFORMANCE_STATUS_DESC_201
RESULTS = 【幕間以降】心理抵抗値 - 5\% 補正:CO + 20\%
