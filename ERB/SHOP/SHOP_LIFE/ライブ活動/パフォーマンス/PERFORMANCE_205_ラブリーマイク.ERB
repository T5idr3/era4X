;パフォーマンスカードの定義
;-------------------------------------------------
;パフォーマンスカード名称
;-------------------------------------------------
@PERFORMANCE_CARDNAME_205
RESULTS:0 = ラブリーマイク

;-------------------------------------------------
;パフォーマンス分類
;-------------------------------------------------
@PERFORMANCE_CATEGORY_205
#DIMS カード属性
VARSET カード属性
カード属性 '= DIC_SET(カード属性, "属性", "VOICE")
カード属性 '= DIC_SET(カード属性, "演目", "CUTE")
RESULTS = %カード属性%


;-------------------------------------------------
;パフォーマンスコマンド名称
;-------------------------------------------------
@PERFORMANCE_COMNAME_205
RESULTS:0 = ラブリーマイク

;-------------------------------------------------
;アンロック条件
;-------------------------------------------------
@PERFORMANCE_AVAILABLE_205
RETURN 1

;-------------------------------------------------
;セット可能なキャラクター条件
;-------------------------------------------------
@PERFORMANCE_SETTABLE_BY_CHARA_205(ARG:0)
IF P_アイドル人気:(ARG:0):0 >= 10000 && ABL:(ARG:0):話術 >= 60
    RETURN 1
ENDIF
RETURN 0

;-------------------------------------------------
;キャラがカードをセット可能できない場合の説明
;-------------------------------------------------
@PERFORMANCE_SETTABLE_DESC_205(ARG:0)
RESULTS:0 = アイドル人気が10000、話術60が必要

;-------------------------------------------------
;演目で使用可能となる条件
;-------------------------------------------------
@PERFORMANCE_PLAYABLE_205
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@PERFORMANCE_MAIN_205(ARG:0)
#DIMS カード効果
VARSET カード効果
カード効果 '= DIC_SET(カード効果, "補正値変更", "0,20,0,0,")
カード効果 '= DIC_SET(カード効果, "トークン変更","親衛隊,2,")
RESULTS = %カード効果%

;-------------------------------------------------
;プレイ時のメッセージ
;-------------------------------------------------
@PERFORMANCE_PLAY_MESSAGE_205(ARG:0)
PRINTFORML %ANAME(ARG:0)%の愛らしいマイクパフォーマンスに熱狂的なファン達が大きく盛り上がっている！

;-------------------------------------------------
;ステータス描写
;-------------------------------------------------
@PERFORMANCE_STATUS_DESC_205
RESULTS = 補正:CU +20\% T:親衛隊+2
