;パフォーマンスカードの定義
;-------------------------------------------------
;パフォーマンスカード名称
;-------------------------------------------------
@PERFORMANCE_CARDNAME_203
RESULTS:0 = 親衛隊召集

;-------------------------------------------------
;パフォーマンス分類
;-------------------------------------------------
@PERFORMANCE_CATEGORY_203
#DIMS カード属性
VARSET カード属性
カード属性 '= DIC_SET(カード属性, "属性", "VOICE")
カード属性 '= DIC_SET(カード属性, "演目", "CUTE")
RESULTS = %カード属性%


;-------------------------------------------------
;パフォーマンスコマンド名称
;-------------------------------------------------
@PERFORMANCE_COMNAME_203
RESULTS:0 = 親衛隊召集

;-------------------------------------------------
;アンロック条件
;-------------------------------------------------
@PERFORMANCE_AVAILABLE_203
RETURN 1

;-------------------------------------------------
;セット可能なキャラクター条件
;-------------------------------------------------
@PERFORMANCE_SETTABLE_BY_CHARA_203(ARG:0)
IF P_アイドル人気:(ARG:0):0 >= 500
    RETURN 1
ENDIF
RETURN 0

;-------------------------------------------------
;キャラがカードをセット可能できない場合の説明
;-------------------------------------------------
@PERFORMANCE_SETTABLE_DESC_203(ARG:0)
RESULTS:0 = アイドル人気が500以上必要

;-------------------------------------------------
;演目で使用可能となる条件
;-------------------------------------------------
@PERFORMANCE_PLAYABLE_203
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@PERFORMANCE_MAIN_203(ARG:0)
#DIMS カード効果
VARSET カード効果
カード効果 '= DIC_SET(カード効果, "補正値変更", "0,15,0,0,")
カード効果 '= DIC_SET(カード効果, "トークン変更","親衛隊,1,")
RESULTS = %カード効果%

;-------------------------------------------------
;プレイ時のメッセージ
;-------------------------------------------------
@PERFORMANCE_PLAY_MESSAGE_203(ARG:0)
PRINTFORML %ANAME(ARG:0)%の熱狂的なファン達が続々と集まってきた……！

;-------------------------------------------------
;ステータス描写
;-------------------------------------------------
@PERFORMANCE_STATUS_DESC_203
RESULTS = 補正:CU +15\% T:親衛隊+1
