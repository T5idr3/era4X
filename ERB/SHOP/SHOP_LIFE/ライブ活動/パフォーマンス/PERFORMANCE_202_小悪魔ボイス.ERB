;パフォーマンスカードの定義
;-------------------------------------------------
;パフォーマンスカード名称
;-------------------------------------------------
@PERFORMANCE_CARDNAME_202
RESULTS:0 = 小悪魔ボイス

;-------------------------------------------------
;パフォーマンス分類
;-------------------------------------------------
@PERFORMANCE_CATEGORY_202(ARG:0)
#DIMS カード属性
VARSET カード属性
カード属性 '= DIC_SET(カード属性, "属性", "VOCAL")
カード属性 '= DIC_SET(カード属性, "演目", "CUTE")
RESULTS = %カード属性%


;-------------------------------------------------
;パフォーマンスコマンド名称
;-------------------------------------------------
@PERFORMANCE_COMNAME_202
RESULTS:0 = 小悪魔ボイス

;-------------------------------------------------
;アンロック条件
;-------------------------------------------------
@PERFORMANCE_AVAILABLE_202
RETURN 1

;-------------------------------------------------
;セット可能なキャラクター条件
;-------------------------------------------------
@PERFORMANCE_SETTABLE_BY_CHARA_202(ARG:0)
RETURN 1

;-------------------------------------------------
;演目で使用可能となる条件
;-------------------------------------------------
@PERFORMANCE_PLAYABLE_202
;【幕間】以降
IF P_経過ターン数 >= (P_ターン数 / 3)
    RETURN 1
ELSE
    RETURN 0
ENDIF

;-------------------------------------------------
;プレイ不可のメッセージ
;-------------------------------------------------
@PERFORMANCE_NOTPLAYABLE_MESSAGE_202(ARG:0)
PRINTFORMW 【幕間】以降のタイミングでのみプレイ可


;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@PERFORMANCE_MAIN_202(ARG:0)
#DIMS カード効果
VARSET カード効果
カード効果 '= DIC_SET(カード効果, "補正値変更", @"0,%TOSTR(20 + (5 * P_トークン数:P_トークン_親衛隊))%,0,0,")
RESULTS = %カード効果%

;-------------------------------------------------
;プレイ時のメッセージ
;-------------------------------------------------
@PERFORMANCE_PLAY_MESSAGE_202(ARG:0)
PRINTFORML %ANAME(ARG:0)%の小悪魔的な歌声が場のテンションを盛り上げる

;-------------------------------------------------
;ステータス描写
;-------------------------------------------------
@PERFORMANCE_STATUS_DESC_202
RESULTS = [幕間以降]補正:CU + 20\% +(T:親衛隊 × 5)
