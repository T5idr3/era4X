;パフォーマンスカードの定義
;-------------------------------------------------
;パフォーマンスカード名称
;-------------------------------------------------
@PERFORMANCE_CARDNAME_6
RESULTS:0 = スタイリッシュターン

;-------------------------------------------------
;パフォーマンス分類
;-------------------------------------------------
@PERFORMANCE_CATEGORY_6(ARG:0)
#DIMS カード属性
VARSET カード属性
カード属性 '= DIC_SET(カード属性, "属性", "DANCE")
カード属性 '= DIC_SET(カード属性, "演目", "COOL")
RESULTS = %カード属性%


;-------------------------------------------------
;パフォーマンスコマンド名称
;-------------------------------------------------
@PERFORMANCE_COMNAME_6
RESULTS:0 = スタイリッシュターン

;-------------------------------------------------
;アンロック条件
;-------------------------------------------------
@PERFORMANCE_AVAILABLE_6
RETURN 1

;-------------------------------------------------
;セット可能なキャラクター条件
;-------------------------------------------------
@PERFORMANCE_SETTABLE_BY_CHARA_6(ARG:0)
IF ABL:(ARG:0):演技力ＣＯ >= 40
	RETURN 1
ENDIF
RETURN 0

;-------------------------------------------------
;キャラがカードをセット可能できない場合の説明
;-------------------------------------------------
@PERFORMANCE_SETTABLE_DESC_6(ARG:0)
RESULTS:0 = 演技力ＣＯ40以上が必要 

;-------------------------------------------------
;演目で使用可能となる条件
;-------------------------------------------------
@PERFORMANCE_PLAYABLE_6
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@PERFORMANCE_MAIN_6(ARG:0)
#DIMS カード効果
VARSET カード効果
カード効果 '= DIC_SET(カード効果, "補正値変更", "20,0,0,0,")
RESULTS = %カード効果%
;-------------------------------------------------
;プレイ時のメッセージ
;-------------------------------------------------
@PERFORMANCE_PLAY_MESSAGE_6(ARG:0)
PRINTFORML %ANAME(ARG:0)%は空間を切り裂くようなスタイリッシュなターンを決めた！

;-------------------------------------------------
;ステータス描写
;-------------------------------------------------
@PERFORMANCE_STATUS_DESC_6
RESULTS = 補正:CO + 20\%
