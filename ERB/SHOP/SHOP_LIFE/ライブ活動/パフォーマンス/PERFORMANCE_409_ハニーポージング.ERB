;パフォーマンスカードの定義
;-------------------------------------------------
;パフォーマンスカード名称
;-------------------------------------------------
@PERFORMANCE_CARDNAME_409
RESULTS:0 = ハニーポージング

;-------------------------------------------------
;パフォーマンス分類
;-------------------------------------------------
@PERFORMANCE_CATEGORY_409(ARG:0)
#DIMS カード属性
VARSET カード属性
カード属性 '= DIC_SET(カード属性, "属性", "GESTURE")
カード属性 '= DIC_SET(カード属性, "演目", "CUTE")
RESULTS = %カード属性%



;-------------------------------------------------
;パフォーマンスコマンド名称
;-------------------------------------------------
@PERFORMANCE_COMNAME_409
RESULTS:0 = ハニーポージング

;-------------------------------------------------
;アンロック条件
;-------------------------------------------------
@PERFORMANCE_AVAILABLE_409
RETURN 1

;-------------------------------------------------
;セット可能なキャラクター条件
;-------------------------------------------------
@PERFORMANCE_SETTABLE_BY_CHARA_409(ARG:0)
IF ABL:(ARG:0):演技力ＣＵ >= 70
	RETURN 1
ENDIF
RETURN 0

;-------------------------------------------------
;キャラがカードをセット可能できない場合の説明
;-------------------------------------------------
@PERFORMANCE_SETTABLE_DESC_409(ARG:0)
RESULTS:0 = 演技力ＣＵ70以上が必要 

;-------------------------------------------------
;演目で使用可能となる条件
;-------------------------------------------------
@PERFORMANCE_PLAYABLE_409
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@PERFORMANCE_MAIN_409(ARG:0)
#DIMS カード効果
VARSET カード効果
カード効果 '= DIC_SET(カード効果, "抵抗値変更", "-5")
カード効果 '= DIC_SET(カード効果, "補正値変更", @"0,%TOSTR(15 + (5 * P_コンボ数) + (5 * P_トークン数:P_トークン_親衛隊))%,0,0,")
P_コンボ数 = 0
RESULTS = %カード効果%

;-------------------------------------------------
;プレイ時のメッセージ
;-------------------------------------------------
@PERFORMANCE_PLAY_MESSAGE_409(ARG:0)
PRINTFORML %ANAME(ARG:0)%はハチミツのように甘いポージングで観客をとろけさせていく！

;-------------------------------------------------
;ステータス描写
;-------------------------------------------------
@PERFORMANCE_STATUS_DESC_409
RESULTS = 心理抵抗値-5\% 補正:CU+15\%+(CHAIN数x5)+(T:親衛隊x5) CHAIN数RESET
