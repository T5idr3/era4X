;パフォーマンスカードの定義
;-------------------------------------------------
;パフォーマンスカード名称
;-------------------------------------------------
@PERFORMANCE_CARDNAME_806
RESULTS:0 = 淫魔の呼び声

;-------------------------------------------------
;パフォーマンス分類
;-------------------------------------------------
@PERFORMANCE_CATEGORY_806(ARG:0)
#DIMS カード属性
VARSET カード属性
カード属性 '= DIC_SET(カード属性, "属性", "SPECIAL")
カード属性 '= DIC_SET(カード属性, "演目", "LEWD")
RESULTS = %カード属性%

;-------------------------------------------------
;パフォーマンスコマンド名称
;-------------------------------------------------
@PERFORMANCE_COMNAME_806
RESULTS:0 = 淫魔の呼び声

;-------------------------------------------------
;アンロック条件
;-------------------------------------------------
@PERFORMANCE_AVAILABLE_806
RETURN 1

;-------------------------------------------------
;アンロック条件ヒント
;-------------------------------------------------
@PERFORMANCE_UNLOCK_HINT_DESC_806

;-------------------------------------------------
;セット可能なキャラクター条件
;-------------------------------------------------
@PERFORMANCE_SETTABLE_BY_CHARA_806(ARG:0)
IF GETBIT(TALENT:(ARG:0):淫乱系, 素質_淫乱_淫乱) == 1 && ABL:(ARG:0):演技力ＬＥ >= 70
    RETURN 1
ENDIF
RETURN 0

;-------------------------------------------------
;キャラがカードをセット可能できない場合の説明
;-------------------------------------------------
@PERFORMANCE_SETTABLE_DESC_806(ARG:0)
RESULTS:0 = 素質<淫乱>かつ演技力ＬＥが70以上必要

;-------------------------------------------------
;演目で使用可能となる条件
;-------------------------------------------------
@PERFORMANCE_PLAYABLE_806
IF  演技力補正値:P_LEWD >= 60
    RETURN 1
ENDIF
RETURN 0

;-------------------------------------------------
;プレイ不可のメッセージ
;-------------------------------------------------
@PERFORMANCE_NOTPLAYABLE_MESSAGE_806(ARG:0)
PRINTFORMW 補正値:LEWDが60\%以上必要

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@PERFORMANCE_MAIN_806(ARG:0)
#DIMS カード効果
#DIM 演目
VARSET カード効果
演目 = TOINT(DIC_GET(P_実行ライブ情報, "演目"))
IF 演目 != P_LEWD
    カード効果 '= DIC_SET(カード効果, "CC付与", "発情")
    カード効果 '= DIC_SET(カード効果, "補正値変更", "-40,-40,-40,120,")
ELSE
    カード効果 '= DIC_SET(カード効果, "補正値変更", "0,0,0,40,")
ENDIF
RESULTS = %カード効果%


;-------------------------------------------------
;プレイ時のメッセージ
;-------------------------------------------------
@PERFORMANCE_PLAY_MESSAGE_806(ARG:0)
PRINTFORML ――%ANAME(ARG:0)%が絶え間なく発する淫猥な嬌声に、聴衆の倫理の枷がゆるみ、解けてゆく……
CALL COLOR_PRINTW(@"今ならどんな淫らな演技も、観客は抵抗なく受け入れてしまうだろう……", カラー_ピンク)

;-------------------------------------------------
;ステータス描写
;-------------------------------------------------
@PERFORMANCE_STATUS_DESC_806
