TRYCCALLFORM GET_SHIP_NAME_{SELECTED}
	RESULT = 1
	TRYCALLFORM IS_SALE_{SELECTED}
	SIF RESULT == 0
		GOTO INPUT_LOOP
	TRYCALLFORM GET_SHIP_DESCRIPTION_{SELECTED}
	CALL BUILD_SHIP(PORT_POSID, OWNER, PLAYER_COUNTRY, SELECTED, RESULTS, DUMMY)
	;,
