LINE_ITER ++

CALL PRINT_LEFT_COLUMN(LEFT_COLUMNS, LEFT_COLUMNS_BUTTON_VALUE, LINE_ITER)
CALL DRAW_RIGHT_COLUMN_GRAY_LINE
LINE_ITER ++

FOR SHIP_MODEL_ID, 0, 50
	TRYCCALLFORM GET_SHIP_STATUS_{SHIP_MODEL_ID}(SHIP_STATUS)
		RESULT = 1
		TRYCALLFORM IS_SALE_SHIP_{SHIP_MODEL_ID}
		SIF RESULT == 0
			CONTINUE
		IF OWNER == PLAYER_COUNTRY
			CALL PRINT_LEFT_COLUMN(LEFT_COLUMNS, LEFT_COLUMNS_BUTTON_VALUE, LINE_ITER)
			TRYCALLFORM GET_SHIP_NAME_{SHIP_MODEL_ID}
			PRINTBUTTON @"　%RESULTS, 20, LEFT% $0", SHIP_MODEL_ID + 100
		ELSE
			CALL PRINT_LEFT_COLUMN(LEFT_COLUMNS, LEFT_COLUMNS_BUTTON_VALUE, LINE_ITER)
			TRYCALLFORM GET_SHIP_STATUS_{SHIP_MODEL_ID}(SHIP_STATUS)
			TRYCALLFORM GET_SHIP_NAME_{SHIP_MODEL_ID}
			LOCALS = %TOSTR(SHIP_STATUS:SHIP_PRICE, "$##,###,###,###")%
			PRINTBUTTON @"　 %RESULTS, 20, LEFT% %LOCALS, 12, RIGHT%", SHIP_MODEL_ID + 100
		ENDIF
		LINE_ITER ++
		PRINTL
	CATCH
		CONTINUE
	ENDCATCH
NEXT

INPUT
