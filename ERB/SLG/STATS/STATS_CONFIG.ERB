;統計情報のコンフィグに関する処理

;-------------------------------------------------
;統計の設定と出力
;-------------------------------------------------
@STATS_CONFIG
CALL SINGLE_DRAWLINE
PRINTL ●統計の設定と出力●
CALL SINGLE_DRAWLINE
PRINTFORM [ 0] %"統計関係の処理", 40, LEFT%
PRINTFORML %STATS_STOPPED ? "停止" # "行う"%
CALL SINGLE_DRAWLINE
PRINTFORML [11] 経済力 の記録を出力する
PRINTFORML [12] 国庫 の記録を出力する
PRINTFORML [13] 兵数 の記録を出力する
PRINTFORML [21] 同盟 の記録を出力する
PRINTFORML [22] 停戦 の記録を出力する
CALL SINGLE_DRAWLINE
PRINTL [99] 決定

$INPUT_LOOP
INPUT

IF RESULT == 99
	RETURN
ELSEIF RESULT == 0
	STATS_STOPPED = !STATS_STOPPED
ELSEIF RESULT == 11
	PRINTFORML 統計情報(経済力)を出力します。
	CALL STATS_OUTPUT(STATS_GDP)
	WAIT
ELSEIF RESULT == 12
	PRINTFORML 統計情報(国庫)を出力します。
	CALL STATS_OUTPUT(STATS_WEALTH)
	WAIT
ELSEIF RESULT == 13
	PRINTFORML 統計情報(兵数)を出力します。
	CALL STATS_OUTPUT(STATS_ARMY)
	WAIT
ELSEIF RESULT == 21
	PRINTFORML 現在の同盟状況を出力します。
	CALL TREATY_OUTPUT(1)
	WAIT
ELSEIF RESULT == 22
	PRINTFORML 現在の停戦状況を出力します。
	CALL TREATY_OUTPUT(0)
	WAIT
ELSE
	GOTO INPUT_LOOP
ENDIF
RESTART
