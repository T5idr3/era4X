; 生産
@PRICATE_PRODUCTION(STAR_ID)
#DIM STAR_ID
#DIM CONST DAILY_PRODUCTION = 150
#DIM CONST SPECIAL_ITEM_DAILY_PRODUCTION = 15

SELECTCASE STAR_ID
    CASE 0
        RESULT = ADD_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, 宇宙たばこ, DAILY_PRODUCTION)
    CASE 1
        RESULT = ADD_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, オーネスワイン, DAILY_PRODUCTION)
    CASE 2
        RESULT = ADD_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, トルス酒, DAILY_PRODUCTION)
    CASE 3
        RESULT = ADD_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, サンロットの香木, DAILY_PRODUCTION)
    CASE 4
        RESULT = ADD_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, フォルス酒, DAILY_PRODUCTION)
    CASE 5
        RESULT = ADD_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, ゴルンミスト発生器, DAILY_PRODUCTION)
    CASE 6
        RESULT = ADD_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, ロック布, DAILY_PRODUCTION)
    CASE 7
        RESULT = ADD_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, ナナーシャ鳥, DAILY_PRODUCTION)
    CASE 8
        RESULT = ADD_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, エインズの実, DAILY_PRODUCTION)
    CASE 9
        RESULT = ADD_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, ナイ・ゲーム機, DAILY_PRODUCTION)
ENDSELECT
SELECTCASE STAR_OWNER:STAR_ID
    CASE 2
        CALL AUTO_PROCESSING(STAR_ID, STAR_OWNER:STAR_ID, パワードスーツ, SPECIAL_ITEM_DAILY_PRODUCTION)
    CASE 3
        CALL AUTO_PROCESSING(STAR_ID, STAR_OWNER:STAR_ID, レース機, SPECIAL_ITEM_DAILY_PRODUCTION)
    CASE 4
        CALL AUTO_PROCESSING(STAR_ID, STAR_OWNER:STAR_ID, 思考戦車, SPECIAL_ITEM_DAILY_PRODUCTION)
    CASE 5
        CALL AUTO_PROCESSING(STAR_ID, STAR_OWNER:STAR_ID, 異星生物育成キット, SPECIAL_ITEM_DAILY_PRODUCTION)
    CASE 6
        CALL AUTO_PROCESSING(STAR_ID, STAR_OWNER:STAR_ID, セクサロイド, SPECIAL_ITEM_DAILY_PRODUCTION)
ENDSELECT

; 消費
@PRIVATE_DEMAND(STAR_ID)
#DIM STAR_ID
#DIM ITEM_ID
#DIM CONST DAILY_DEMAND = 100
#DIM CONST SPECIAL_ITEM_DAILY_DEMAND = 10

FOR ITEM_ID, 30, 40
    LOCAL = GET_RESOURCE_NUM(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, ITEM_ID)
    SIF (LOCAL == 0)
        CONTINUE
    RESULT = REMOVE_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, ITEM_ID, DAILY_DEMAND)
NEXT
FOR ITEM_ID, 40, 45
    LOCAL = GET_RESOURCE_NUM(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, ITEM_ID)
    SIF (LOCAL == 0)
        CONTINUE
    RESULT = REMOVE_RESOURCE(星系座標ID:STAR_ID, STAR_OWNER:STAR_ID, ITEM_ID, SPECIAL_ITEM_DAILY_DEMAND)
NEXT
