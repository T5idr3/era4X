;-----------------------------------
; エンジン
;-----------------------------------
@GET_ENGIN_NAME_7
#FUNCTIONS

RETURNF TIER2大型戦闘用エンジン

@GET_ENGIN_STATUS_7(STATUS)
#DIM REF STATUS

STATUS:SPEED = 1
STATUS:AVOID = 10
STATUS:SIZE = 3
STATUS:PRICE = 80000

;-----------------------------------
; エンジンの説明
;-----------------------------------
@GET_ENGIN_DESCRIPTION_7(STATUS)
#DIM STATUS, STATUS_LENGTH

CALL GET_ENGIN_STATUS_7(STATUS)
PRINTFORML %GET_ENGIN_NAME_7()%
PRINTFORML スピード  : {STATUS:SPEED}
PRINTFORML 回避      : {STATUS:AVOID}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; エンジンの資材
;-----------------------------------
@GET_ENGIN_RESOURCE_7(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:耐熱合金 = 16
USE_RESOURCE:ジェットガス = 16
