@GET_ENGIN_NAME_2
#FUNCTIONS

RETURNF TIER1中型戦闘用エンジン

@GET_ENGIN_STATUS_2(STATUS)
#DIM REF STATUS

STATUS:SPEED = 1
STATUS:AVOID = 5
STATUS:SIZE = 2
STATUS:PRICE = 20000

;-----------------------------------
; エンジンの説明
;-----------------------------------
@GET_ENGIN_DESCRIPTION_2(STATUS)
#DIM STATUS, STATUS_LENGTH

CALL GET_ENGIN_STATUS_2(STATUS)
PRINTFORML %GET_ENGIN_NAME_2()%
PRINTFORML スピード  : {STATUS:SPEED}
PRINTFORML 回避      : {STATUS:AVOID}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; エンジンの資材
;-----------------------------------
@GET_ENGIN_RESOURCE_2(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:耐熱合金 = 4
USE_RESOURCE:ジェットガス = 4
