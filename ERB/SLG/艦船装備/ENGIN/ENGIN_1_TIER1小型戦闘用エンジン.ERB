;-----------------------------------
; エンジン
;-----------------------------------
@GET_ENGIN_NAME_1
#FUNCTIONS

RETURNF TIER1小型戦闘用エンジン

@GET_ENGIN_STATUS_1(STATUS)
#DIM REF STATUS

STATUS:SPEED = 1
STATUS:AVOID = 5
STATUS:SIZE = 1
STATUS:PRICE = 10000

;-----------------------------------
; エンジンの説明
;-----------------------------------
@GET_ENGIN_DESCRIPTION_1(STATUS)
#DIM STATUS, STATUS_LENGTH

CALL GET_ENGIN_STATUS_1(STATUS)
PRINTFORML %GET_ENGIN_NAME_1()%
PRINTFORML スピード  : {STATUS:SPEED}
PRINTFORML 回避      : {STATUS:AVOID}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; エンジンの資材
;-----------------------------------
@GET_ENGIN_RESOURCE_1(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:耐熱合金 = 2
USE_RESOURCE:ジェットガス = 2
