;-----------------------------------
; エンジン
;-----------------------------------
@GET_ENGIN_NAME_4
#FUNCTIONS

RETURNF TIER1超大型戦闘用エンジン

@GET_ENGIN_STATUS_4(STATUS)
#DIM REF STATUS

STATUS:SPEED = 1
STATUS:AVOID = 5
STATUS:SIZE = 4
STATUS:PRICE = 80000

;-----------------------------------
; エンジンの説明
;-----------------------------------
@GET_ENGIN_DESCRIPTION_4(STATUS)
#DIM STATUS, STATUS_LENGTH

CALL GET_ENGIN_STATUS_4(STATUS)
PRINTFORML %GET_ENGIN_NAME_4()%
PRINTFORML スピード  : {STATUS:SPEED}
PRINTFORML 回避      : {STATUS:AVOID}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; エンジンの資材
;-----------------------------------
@GET_ENGIN_RESOURCE_4(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:耐熱合金 = 16
USE_RESOURCE:ジェットガス = 16
