;-----------------------------------
; エンジン
;-----------------------------------
@GET_ENGIN_NAME_12
#FUNCTIONS

RETURNF TIER3超大型戦闘用エンジン

@GET_ENGIN_STATUS_12(STATUS)
#DIM REF STATUS

STATUS:SPEED = 1
STATUS:AVOID = 15
STATUS:SIZE = 4
STATUS:PRICE = 320000

;-----------------------------------
; エンジンの説明
;-----------------------------------
@GET_ENGIN_DESCRIPTION_12(STATUS)
#DIM STATUS, STATUS_LENGTH

CALL GET_ENGIN_STATUS_12(STATUS)
PRINTFORML %GET_ENGIN_NAME_12()%
PRINTFORML スピード  : {STATUS:SPEED}
PRINTFORML 回避      : {STATUS:AVOID}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; エンジンの資材
;-----------------------------------
@GET_ENGIN_RESOURCE_12(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:耐熱合金 = 64
USE_RESOURCE:ジェットガス = 64
