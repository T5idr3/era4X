;-----------------------------------
; エンジン
;-----------------------------------
@GET_ENGIN_NAME_6
#FUNCTIONS

RETURNF TIER2中型戦闘用エンジン

@GET_ENGIN_STATUS_6(STATUS)
#DIM REF STATUS

STATUS:SPEED = 1
STATUS:AVOID = 10
STATUS:SIZE = 2
STATUS:PRICE = 40000

;-----------------------------------
; エンジンの説明
;-----------------------------------
@GET_ENGIN_DESCRIPTION_6(STATUS)
#DIM STATUS, STATUS_LENGTH

CALL GET_ENGIN_STATUS_6(STATUS)
PRINTFORML %GET_ENGIN_NAME_6()%
PRINTFORML スピード  : {STATUS:SPEED}
PRINTFORML 回避      : {STATUS:AVOID}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; エンジンの資材
;-----------------------------------
@GET_ENGIN_RESOURCE_6(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:耐熱合金 = 8
USE_RESOURCE:ジェットガス = 8
