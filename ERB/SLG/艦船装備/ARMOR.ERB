;-----------------------------------
; アーマー
;-----------------------------------
@GET_ARMOR(ID)
#DIM ID

SELECTCASE ID
	CASE 1
		ARMOR = 200
		SIZE = 1
		EQUIP_NAME = TIER1汎用装甲
	CASE 2
		ARMOR = 500
		SIZE = 2
		EQUIP_NAME = TIER2汎用装甲
	CASE 3
		ARMOR = 1200
		SIZE = 3
		EQUIP_NAME = TIER3汎用装甲
	CASEELSE
		EQUIP_NAME = ---
ENDSELECT

;-----------------------------------
; アーマーの説明
;-----------------------------------
@GET_ARMOR_DESCRIPTION(ID)
#DIM ID
CALL GET_ARMOR(ID)
SELECTCASE ID
	CASE 1 TO 3
		PRINTFORML %EQUIP_NAME%
		PRINTFORML 装甲      : {ARMOR}
		PRINTFORML サイズ    : {SIZE}
	CASEELSE
		PRINTFORML = ---
ENDSELECT
