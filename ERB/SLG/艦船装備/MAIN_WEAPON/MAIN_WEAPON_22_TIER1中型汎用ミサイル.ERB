;-----------------------------------
; メインウェポン
;-----------------------------------
@GET_MAIN_WEAPON_NAME_22
#FUNCTIONS
RETURNF TIER1中型汎用ミサイル

@GET_MAIN_WEAPON_STATUS_22(STATUS)
#DIM REF STATUS

STATUS:DAMAGE = 500
STATUS:FIRE_RATE = 1
STATUS:HIT_RATE = 100
STATUS:FIRE_RANGE = 3
STATUS:SIZE = 2
STATUS:WEAPON_TYPE = ミサイル
STATUS:PRICE = 20000

;-----------------------------------
; メインウェポンの説明
;-----------------------------------
@GET_MAIN_WEAPON_DESCRIPTION_22
#DIM STATUS, STATUS_LENGTH

CALL GET_MAIN_WEAPON_STATUS_22(STATUS)
PRINTFORML %GET_MAIN_WEAPON_NAME_22()%
PRINTFORML ダメージ  : {STATUS:DAMAGE}
PRINTFORML 射撃レート: {STATUS:FIRE_RATE}発/ターン
PRINTFORML 命中率    : {STATUS:HIT_RATE}
PRINTFORML 有効距離  : {STATUS:FIRE_RANGE}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; メインウェポンの資材
;-----------------------------------
@GET_MAIN_WEAPON_RESOURCE_22(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:武装合金 = 2
USE_RESOURCE:耐熱合金 = 2
USE_RESOURCE:武装制御機器 = 2
