STATUS:DAMAGE = 2800
STATUS:FIRE_RATE = 1
STATUS:HIT_RATE = 60
STATUS:FIRE_RANGE = 1
STATUS:SIZE = 1
STATUS:WEAPON_TYPE = ミサイル
