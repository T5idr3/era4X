;-----------------------------------
; メインウェポン
;-----------------------------------
@GET_MAIN_WEAPON_NAME_23
#FUNCTIONS
RETURNF TIER1大型汎用ミサイル

@GET_MAIN_WEAPON_STATUS_23(STATUS)
#DIM REF STATUS

STATUS:DAMAGE = 1000
STATUS:FIRE_RATE = 1
STATUS:HIT_RATE = 100
STATUS:FIRE_RANGE = 3
STATUS:SIZE = 3
STATUS:WEAPON_TYPE = ミサイル
STATUS:PRICE = 40000

;-----------------------------------
; メインウェポンの説明
;-----------------------------------
@GET_MAIN_WEAPON_DESCRIPTION_23
#DIM STATUS, STATUS_LENGTH

CALL GET_MAIN_WEAPON_STATUS_23(STATUS)
PRINTFORML %GET_MAIN_WEAPON_NAME_23()%
PRINTFORML ダメージ  : {STATUS:DAMAGE}
PRINTFORML 射撃レート: {STATUS:FIRE_RATE}発/ターン
PRINTFORML 命中率    : {STATUS:HIT_RATE}
PRINTFORML 有効距離  : {STATUS:FIRE_RANGE}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; メインウェポンの資材
;-----------------------------------
@GET_MAIN_WEAPON_RESOURCE_23(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:武装合金 = 4
USE_RESOURCE:耐熱合金 = 4
USE_RESOURCE:武装制御機器 = 4
