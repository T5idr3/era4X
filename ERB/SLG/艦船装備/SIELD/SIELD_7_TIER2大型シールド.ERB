@GET_SIELD_NAME_7
#FUNCTIONS

RETURNF TIER2大型シールド

@GET_SIELD_STATUS_7(STATUS)
#DIM REF STATUS

STATUS:SIELD = 1600
STATUS:SIELD_RECOVER = 16
STATUS:SIZE = 3
STATUS:PRICE = 80000

;-----------------------------------
; シールドの説明
