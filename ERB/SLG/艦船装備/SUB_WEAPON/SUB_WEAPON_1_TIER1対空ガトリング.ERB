;-----------------------------------
; サブウェポン
;-----------------------------------
@GET_SUB_WEAPON_NAME_1
#FUNCTIONS

RETURNF TIER1対空ガトリング

@GET_SUB_WEAPON_STATUS_1(STATUS)
#DIM REF STATUS

STATUS:DAMAGE = 1
STATUS:FIRE_RATE = 10
STATUS:ANTI_AIR = 10
STATUS:HIT_RATE = 90
STATUS:FIRE_RANGE = 1
STATUS:SIZE = 1
STATUS:WEAPON_TYPE = 実体弾
STATUS:PRICE = 10000

;-----------------------------------
; サブウェポンの説明
;-----------------------------------
@GET_SUB_WEAPON_DESCRIPTION_1
#DIM STATUS, STATUS_LENGTH

CALL GET_SUB_WEAPON_STATUS_1(STATUS)
PRINTFORML %GET_SUB_WEAPON_NAME_1()%
PRINTFORML ダメージ  : {STATUS:DAMAGE}
PRINTFORML 射撃レート: {STATUS:FIRE_RATE}発/ターン
PRINTFORML 対空攻撃力: {STATUS:ANTI_AIR}
PRINTFORML 命中率    : {STATUS:HIT_RATE}
PRINTFORML 有効距離  : {STATUS:FIRE_RANGE}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; サブウェポンの資材
;-----------------------------------
@GET_SUB_WEAPON_RESOURCE_1(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:武装合金 = 2
USE_RESOURCE:武装制御機器 = 1
