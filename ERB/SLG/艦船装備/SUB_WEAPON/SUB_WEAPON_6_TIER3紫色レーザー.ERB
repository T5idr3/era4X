;-----------------------------------
; サブウェポン
;-----------------------------------
@GET_SUB_WEAPON_NAME_6
#FUNCTIONS

RETURNF TIER3紫色レーザー

@GET_SUB_WEAPON_STATUS_6(STATUS)
#DIM REF STATUS

STATUS:DAMAGE = 20
STATUS:FIRE_RATE = 5
STATUS:ANTI_AIR = 10
STATUS:HIT_RATE = 70
STATUS:SIZE = 2
STATUS:WEAPON_TYPE = レーザー
STATUS:PRICE = 80000

;-----------------------------------
; サブウェポンの説明
;-----------------------------------
@GET_SUB_WEAPON_DESCRIPTION_6
#DIM STATUS, STATUS_LENGTH

CALL GET_SUB_WEAPON_STATUS_6(STATUS)
PRINTFORML %GET_SUB_WEAPON_NAME_6()%
PRINTFORML ダメージ  : {STATUS:DAMAGE}
PRINTFORML 射撃レート: {STATUS:FIRE_RATE}発/ターン
PRINTFORML 対空攻撃力: {STATUS:ANTI_AIR}
PRINTFORML 命中率    : {STATUS:HIT_RATE}
PRINTFORML 有効距離  : {STATUS:FIRE_RANGE}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; サブウェポンの資材
;-----------------------------------
@GET_SUB_WEAPON_RESOURCE_6(USE_RESOURCE)
#DIM REF USE_RESOURCE

