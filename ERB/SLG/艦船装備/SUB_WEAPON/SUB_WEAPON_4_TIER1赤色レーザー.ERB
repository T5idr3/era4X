;-----------------------------------
; サブウェポン
;-----------------------------------
@GET_SUB_WEAPON_NAME_4
#FUNCTIONS

RETURNF TIER1赤色レーザー

@GET_SUB_WEAPON_STATUS_4(STATUS)
#DIM REF STATUS

STATUS:DAMAGE = 10
STATUS:FIRE_RATE = 5
STATUS:ANTI_AIR = 5
STATUS:HIT_RATE = 70
STATUS:SIZE = 2
STATUS:WEAPON_TYPE = レーザー
STATUS:PRICE = 20000

;-----------------------------------
; サブウェポンの説明
;-----------------------------------
@GET_SUB_WEAPON_DESCRIPTION_4
#DIM STATUS, STATUS_LENGTH

CALL GET_SUB_WEAPON_STATUS_4(STATUS)
PRINTFORML %GET_SUB_WEAPON_NAME_4()%
PRINTFORML ダメージ  : {STATUS:DAMAGE}
PRINTFORML 射撃レート: {STATUS:FIRE_RATE}発/ターン
PRINTFORML 対空攻撃力: {STATUS:ANTI_AIR}
PRINTFORML 命中率    : {STATUS:HIT_RATE}
PRINTFORML 有効距離  : {STATUS:FIRE_RANGE}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; サブウェポンの資材
;-----------------------------------
@GET_SUB_WEAPON_RESOURCE_4(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:武装合金 = 1
USE_RESOURCE:武装制御機器 = 1
USE_RESOURCE:耐熱合金 = 1
USE_RESOURCE:超電導回路 = 1
