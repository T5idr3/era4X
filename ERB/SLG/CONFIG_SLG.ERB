;SLG部分のコンフィグに関する処理

;-------------------------------------------------
;SLG部分のコンフィグの初期設定
;-------------------------------------------------
@INIT_CONFIG_SLG
CONFIG:300 = 1
CONFIG:303 = 2
CONFIG:304 = 1
CONFIG:313 = 1
CONFIG:314 = 1
STATS_STOPPED = 1

;-------------------------------------------------
;ＳＬＧ部分に関する設定
;-------------------------------------------------
@CONFIG_SLG
#DIM FIRST_LINE
FIRST_LINE = LINECOUNT
CALL SINGLE_DRAWLINE
PRINTL ●ＳＬＧ部分に関する設定●
CALL SINGLE_DRAWLINE

LOCALS:0 = 戦闘による大破艦を即ロストさせるか
PRINTFORM %LOCALS:0, 36, RIGHT% -
PRINTBUTTON " 0[変更]", 0
PRINT  
SELECTCASE CONFIG:300
	CASE 0
		PRINT 即ロスト
	CASE 1
		PRINT 大破状態にする
ENDSELECT
PRINTL 


PRINTL
CALL SINGLE_DRAWLINE
PRINTBUTTON " 30[統計の設定と出力]", 30
PRINTL 
CALL SINGLE_DRAWLINE
PRINTBUTTON " 99[決定]", 99
PRINTL 

$INPUT_LOOP
INPUT

IF RESULT == 99
	RETURN
ELSEIF RESULT == 0
	CONFIG:300 ++
	CONFIG:300 %= 2
ELSEIF RESULT == 1
	CONFIG:301 ++
	CONFIG:301 %= 3
;ELSEIF RESULT == 2
;	CONFIG:302 ++
;	IF CONFIG:302 >= 2
;		CONFIG:302 = 0
;	ENDIF
ELSEIF RESULT == 3
	CONFIG:303 ++
	CONFIG:303 %= 3
ELSEIF RESULT == 4
	CONFIG:304 ++
	CONFIG:304 %= 3
ELSEIF RESULT == 5
	CONFIG:305 ++
	CONFIG:305 %= 4
ELSEIF RESULT == 6
	CALL CONFIG_TOGGLE(306)
ELSEIF RESULT == 7
	CONFIG:307 ++
	CONFIG:307 %= 3
ELSEIF RESULT == 8
	CONFIG:308 ++
	CONFIG:308 %= 4
ELSEIF RESULT == 9
	CALL CONFIG_TOGGLE(309)
ELSEIF RESULT == 10
	CALL CONFIG_TOGGLE(310)
ELSEIF RESULT == 12
	CONFIG:312 ++
	CONFIG:312 %= 4
ELSEIF RESULT == 13
	CONFIG:313 ++
	CONFIG:313 %= 7
ELSEIF RESULT == 14
	CONFIG:314 ++
	CONFIG:314 %= 5
ELSEIF RESULT == 19
	CONFIG:319 ++
	CONFIG:319 %= 2
ELSEIF RESULT == 30
	;統計の設定と出力
	CALL STATS_CONFIG
ELSE
	GOTO INPUT_LOOP
ENDIF
CLEARLINE LINECOUNT - FIRST_LINE
RESTART
