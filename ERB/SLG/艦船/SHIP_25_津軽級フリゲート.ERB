SHIP_EQUIP:主砲:0:SHIP_ID = 30
SHIP_EQUIP:主砲:1:SHIP_ID = 30
SHIP_EQUIP:シールド:0:SHIP_ID = 2
SHIP_EQUIP:装甲:0:SHIP_ID = 2
SHIP_EQUIP:エンジン:0:SHIP_ID = 2
SHIP_EQUIP:AI:0:SHIP_ID = 1
SHIP_EQUIP:センサー:0:SHIP_ID = 1

@IS_SALE_SHIP_25
#DIM STAR_ID
FOR STAR_ID, 0, 星系数
  SIF CHARACTER_POSITION == 星系座標ID:STAR_ID && STAR_OWNER:STAR_ID == 11
    RETURN 1
NEXT
