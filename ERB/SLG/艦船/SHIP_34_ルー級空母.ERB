@GET_SHIP_DESCRIPTION_34
#DIM SHIP_STATUS, SHIP_STATUS_LENGTH
CALL GET_SHIP_NAME_34
PRINTFORML %RESULTS%
SETCOLOR 0X666666
DRAWLINE
RESETCOLOR
CALL GET_SHIP_STATUS_34(SHIP_STATUS)
PRINTFORML %"HP", 20, LEFT% {SHIP_STATUS:SHIP_HP, 12, RIGHT}
