@COM189
PRINTL 新妻プレイ
STR:0 = 新妻プレイ
CALL KOJO_MESSAGE_COM

;着脱の処理　装備時はソース、経験の加算は行わない
IF TEQUIP:33 == 1
	TEQUIP:33 = 0
ELSE
	TEQUIP:33 = 1
ENDIF

;依存度ベクトル
TFLAG:33 = 0


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM189
;新妻プレイ

;助手調教時は、エプロンを解除して関数終了
IF ASSIPLAY
	TEQUIP:33 = 0
	RETURN 0
ENDIF

PRINTL ＜新妻プレイ中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 20
LOSEBASE:1 += 20

SOURCE:4 += 1000
SOURCE:12 += 5000
SOURCE:17 += 500


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;愛情経験
PRINTFORML %EXPNAME:23%＋１
EXP:愛情経験 += 1

;依存度補正値(主人かつ恋慕で2、親愛で4）
IF TALENT:恋慕 && ASSIPLAY == 0
	TFLAG:30 += 2
ELSEIF TALENT:親愛 && ASSIPLAY == 0
	TFLAG:30 += 4
ENDIF


RETURN 1

