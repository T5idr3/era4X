;消費体力、気力
;調教者が調合知識を持っていれば消費を抑えられる
IF TALENT:PLAYER:調合知識
	LOSEBASE:0 += 100
	LOSEBASE:1 += 100
ELSE
	LOSEBASE:0 += 200
	LOSEBASE:1 += 200
ENDIF

SOURCE:17 = 800
;利尿剤効果で軽く変動
SOURCE:18 = 150


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 1
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

