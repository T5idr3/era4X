;-------------------------------------------------
;ニプルキャップ
;道具使用コマンド、レベル2
;-------------------------------------------------
@COM47
IF TEQUIP:25
	PRINTL 触手乳首責め
	STR:0 = 触手乳首責め
	SELECTCOM = 164
ELSE
	PRINTL ニプルキャップ
	STR:0 = ニプルキャップ
ENDIF
CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:16 == 0
	TEQUIP:16 = 1
	;触手乳首責めは触手の汚れを追加
	IF TEQUIP:25
		STAIN:5 |= 32
	ENDIF
ELSE
	TEQUIP:16 = 0
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 10
LOSEBASE:1 += 80

SOURCE:3 = 200
SOURCE:13 = 20
SOURCE:17 = 30
SOURCE:18 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:16 += 30

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手乳首責めなら、触手体液が胸に付く
SIF TEQUIP:25
	STAIN:5 |= 32

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 1
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;触手召喚時、触手経験のリセットをする
SIF TEQUIP:25 == 1
	T = 0

;依存度ベクトル
TFLAG:33 = 1


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM47
;ニプルキャップ装備中
IF TEQUIP:25
	PRINTL ＜触手乳首責め中＞
ELSE
	PRINTL ＜ニプルキャップ装備中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:0 += 5
LOSEBASE:1 += 20

SOURCE:3 += 100
SOURCE:13 += 10
SOURCE:17 += 15
SOURCE:18 += 15

RETURN 1

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;触手経験加算
SIF TEQUIP:25 == 1
	T += 1


