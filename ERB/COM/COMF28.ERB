;-------------------------------------------------
;罵倒
;コミュニケーション系コマンド、レベル2
;-------------------------------------------------
@COM28
PRINTL 罵倒
STR:0 = 罵倒
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 20
LOSEBASE:1 += 60

SOURCE:9 = 700
SOURCE:14 = 100
SOURCE:17 = 400
SOURCE:18 = 500


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
IF ABL:9 == 0
	TIMES SOURCE:14 , 0.80
	SOURCE:10 += 0
	SOURCE:11 += 0
ELSEIF ABL:9 == 1
	TIMES SOURCE:14 , 1.00
	SOURCE:10 += 20
	SOURCE:11 += 30
ELSEIF ABL:9 == 2
	TIMES SOURCE:14 , 1.20
	SOURCE:10 += 40
	SOURCE:11 += 70
ELSEIF ABL:9 == 3
	TIMES SOURCE:14 , 1.40
	SOURCE:10 += 70
	SOURCE:11 += 120
ELSEIF ABL:9 == 4
	TIMES SOURCE:14 , 1.50
	SOURCE:10 += 110
	SOURCE:11 += 180
ELSEIF ABL:9 == 5
	TIMES SOURCE:14 , 1.70
	SOURCE:10 += 150
	SOURCE:11 += 250
ELSEIF ABL:9 == 6
	TIMES SOURCE:14 , 1.90
	SOURCE:10 += 200
	SOURCE:11 += 300
ELSEIF ABL:9 == 7
	TIMES SOURCE:14 , 2.10
	SOURCE:10 += 250
	SOURCE:11 += 350
ELSEIF ABL:9 == 8
	TIMES SOURCE:14 , 2.30
	SOURCE:10 += 300
	SOURCE:11 += 400
ELSEIF ABL:9 == 9
	TIMES SOURCE:14 , 2.50
	SOURCE:10 += 350
	SOURCE:11 += 450
ELSEIF ABL:9 >= 10
	TIMES SOURCE:14 , 3.00
	SOURCE:10 += 500
	SOURCE:11 += 500
ENDIF

;マゾを見る
IF TALENT:マゾ == 1
	TIMES SOURCE:14 , 2.50
	TIMES SOURCE:10 , 1.20
	TIMES SOURCE:11 , 1.20
ENDIF

;TALENT:反抗的をみる
IF TALENT:反抗的 == 1
	TIMES SOURCE:9 , 0.75
	TIMES SOURCE:14 , 0.75
	TIMES SOURCE:15 , 1.50
ENDIF

;TALENT:気丈をみる
IF TALENT:気丈 == 1
	TIMES SOURCE:9 , 0.75
	TIMES SOURCE:14 , 0.75
	TIMES SOURCE:18 , 2.50
ENDIF

;TALENT:プライド高いをみる
IF TALENT:プライド高い == 1
	TIMES SOURCE:9 , 1.50
	TIMES SOURCE:14 , 1.50
	TIMES SOURCE:18 , 2.00
ENDIF

;TALENT:生意気をみる
IF TALENT:生意気 == 1
	TIMES SOURCE:9 , 0.80
	TIMES SOURCE:14 , 0.80
	TIMES SOURCE:18 , 1.80
ENDIF

;TALENT:プライド低いをみる
IF TALENT:プライド低い == 1
	TIMES SOURCE:9 , 1.50
	TIMES SOURCE:14 , 0.75
	TIMES SOURCE:18 , 0.75
ENDIF

;縄で緊縛中のとき効果上昇
SIF TEQUIP:19
	TIMES SOURCE:14 , 1.50
;ボールギャグ装着中のとき効果上昇
SIF TEQUIP:20
	TIMES SOURCE:14 , 1.75

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 1
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;愛情経験(減少）
IF (TALENT:恋慕 == 1 || TALENT:親愛 == 1) && ASSIPLAY == 0 && EXP:愛情経験 > 0
	PRINTS EXPNAME:23
	PRINTL -1
	EXP:愛情経験 -= 1
ENDIF

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

