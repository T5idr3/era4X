;-------------------------------------------------
;アナル舐め
;愛撫系コマンド、レベル1
;-------------------------------------------------
@COM4
PRINTL アナル舐め
STR:0 = アナル舐め
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
;消費体力、気力
LOSEBASE:0 += 5
LOSEBASE:1 += 50

SOURCE:2 = 50
SOURCE:10 = 50
SOURCE:17 = 40
SOURCE:18 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:16 += 50

;調教者のTALENT:舌使いをみる
SIF TALENT:PLAYER:舌使い
	TIMES SOURCE:2 , 1.50
	
;調教者のTALENT:猫舌をみる
SIF TALENT:PLAYER:舌使い
	TIMES SOURCE:2 , 0.75


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＡ⇔調教者の口の汚れが移動
STAIN:4 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:4

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 3
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
IF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1
	PRINTFORML %CALLNAME:PLAYER%の%EXPNAME:32%＋１
ENDIF

;依存度ベクトル
TFLAG:33 = 3


RETURN 1

