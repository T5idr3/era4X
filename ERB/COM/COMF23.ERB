	RESTART
ELSEIF RESULT == 1 && MONEY < 2000
	RESTART
ELSEIF RESULT == 2 && MONEY < 7500
	RESTART
ELSEIF RESULT == 3 && MONEY < 30000
	RESTART
ELSEIF RESULT == 4 && MONEY < 75000
	RESTART
ELSEIF RESULT == 5 && MONEY < 300000
	RESTART
ELSEIF RESULT == 0
