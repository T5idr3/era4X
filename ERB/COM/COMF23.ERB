	TFLAG:17 = 0
ELSEIF RESULT == 1
	;酒をプレゼント
	TFLAG:17 = 1
	MONEY -= 3000
ELSEIF RESULT == 2
	;日用品をプレゼント
	TFLAG:17 = 2
	MONEY -= 7500
ELSEIF RESULT == 3
	;アクセサリをプレゼント
	TFLAG:17 = 3
	MONEY -= 30000
ELSEIF RESULT == 4
	;服をプレゼント
	TFLAG:17 = 4
	MONEY -= 75000
ELSEIF RESULT == 5
	;高級菓子をプレゼント
	TFLAG:17 = 5
	MONEY -= 300000
ELSEIF RESULT >= 100
	PRINTFORMW プレゼントを渡すのを止めました
	RETURN 0
ENDIF

