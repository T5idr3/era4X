;-------------------------------------------------
;搾乳器
;道具使用コマンド、レベル3
;-------------------------------------------------
@COM49

IF TEQUIP:25
	PRINTL 触手搾乳
	STR:0 = 触手搾乳
	SELECTCOM = 165
ELSE
	PRINTL 搾乳器
	STR:0 = 搾乳器
ENDIF
CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:17 == 0
	TEQUIP:17 = 1
	;触手搾乳は触手の汚れを追加
	IF TEQUIP:25
		STAIN:5 |= 32
	ENDIF
ELSE
	TEQUIP:17 = 0
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 50
LOSEBASE:1 += 100

SOURCE:3 = 200
SOURCE:7 = 100
SOURCE:9 = 100
SOURCE:13 = 30
SOURCE:14 = 100
SOURCE:17 = 100
SOURCE:18 = 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:16 += 100

;中毒による中毒充足のソースは先に処理しておく
;噴乳中毒を見る
IF ABL:19 == 1
	TIMES SOURCE:9 , 0.00
ELSEIF ABL:19 == 2
	TIMES SOURCE:9 , 0.30
ELSEIF ABL:19 == 3
	TIMES SOURCE:9 , 0.60
ELSEIF ABL:19 == 4
	TIMES SOURCE:9 , 0.90
ELSEIF ABL:19 == 5
	TIMES SOURCE:9 , 1.20
ELSEIF ABL:19 == 6
	TIMES SOURCE:9 , 1.50
ELSEIF ABL:19 == 7
	TIMES SOURCE:9 , 1.80
ELSEIF ABL:19 == 8
	TIMES SOURCE:9 , 2.30
ELSEIF ABL:19 == 9
	TIMES SOURCE:9 , 3.00
ELSEIF ABL:19 >= 10
	TIMES SOURCE:9 , 5.00
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手搾乳なら、触手体液が胸に付く
SIF TEQUIP:25
	STAIN:5 |= 32

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 1
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;触手召喚時、触手経験のリセットをする
SIF TEQUIP:25 == 1
	T = 0

;依存度ベクトル
TFLAG:33 = 3


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM49
;搾乳器装備中
IF TEQUIP:25
	PRINTL ＜触手搾乳中＞
ELSE
	PRINTL ＜搾乳器装備中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:0 += 25
LOSEBASE:1 += 50

SOURCE:3 += 100
SOURCE:7 += 50
SOURCE:9 += 50
SOURCE:13 += 15
SOURCE:14 += 50
SOURCE:17 += 50
SOURCE:18 += 50


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;触手経験加算
SIF TEQUIP:25 == 1
	T += 1


RETURN 1

