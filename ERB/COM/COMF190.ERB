;-------------------------------------------------
;写真撮影
;特殊コマンド
;-------------------------------------------------
@COM190
PRINTL 写真撮影
STR:0 = 写真撮影
CALL KOJO_MESSAGE_COM

ITEM:44 -= 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 0
LOSEBASE:1 += 80

SOURCE:8 = 500
SOURCE:10 = 100
SOURCE:13 = 500
SOURCE:17 = 400
SOURCE:18 = 400


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:16 += 400

;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
IF ABL:9 == 0
	TIMES SOURCE:13 , 0.80
	SOURCE:10 += 0
	SOURCE:11 += 0
ELSEIF ABL:9 == 1
	TIMES SOURCE:13 , 1.00
	SOURCE:10 += 20
	SOURCE:11 += 30
ELSEIF ABL:9 == 2
	TIMES SOURCE:13 , 1.20
	SOURCE:10 += 40
	SOURCE:11 += 70
ELSEIF ABL:9 == 3
	TIMES SOURCE:13 , 1.40
	SOURCE:10 += 70
	SOURCE:11 += 120
ELSEIF ABL:9 == 4
	TIMES SOURCE:13 , 1.50
	SOURCE:10 += 110
	SOURCE:11 += 180
ELSEIF ABL:9 == 5
	TIMES SOURCE:13 , 1.70
	SOURCE:10 += 150
	SOURCE:11 += 250
ELSEIF ABL:9 == 6
	TIMES SOURCE:13 , 1.90
	SOURCE:10 += 200
	SOURCE:11 += 300
ELSEIF ABL:9 == 7
	TIMES SOURCE:13 , 2.10
	SOURCE:10 += 250
	SOURCE:11 += 350
ELSEIF ABL:9 == 8
	TIMES SOURCE:13 , 2.30
	SOURCE:10 += 300
	SOURCE:11 += 400
ELSEIF ABL:9 == 9
	TIMES SOURCE:13 , 2.50
	SOURCE:10 += 350
	SOURCE:11 += 450
ELSEIF ABL:9 >= 10
	TIMES SOURCE:13 , 3.00
	SOURCE:10 += 500
	SOURCE:11 += 500
ENDIF

;マゾを見る
IF TALENT:マゾ == 1
	TIMES SOURCE:13 , 2.50
	TIMES SOURCE:10 , 1.20
	TIMES SOURCE:11 , 1.20
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;値段の計算を行い、売却処理は後で行う
CALL PRICE_PICTURE

PRINTFORM %CALLNAME:PLAYER%の撮影経験＋１
PRINTL 被写経験＋１
EXP:PLAYER:撮影経験 += 1
EXP:被写経験 += 1

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

