		MESSAGE +="不在 　　　　　　　　 "
	ELSE
		MESSAGE = %MESSAGE%%CALLNAME:(RESULT:0),22,LEFT%
		人員:(RESULT:0) = -1
	ENDIF
	PRINTBUTTON @"%MESSAGE%", (20000+SHIP_ID)

