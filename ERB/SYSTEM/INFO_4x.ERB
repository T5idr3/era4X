@ERROR_CHECK_FREET(FREET_FORMATION)
#DIM REF FREET_FORMATION, 0, 0
#DIM CONST 自由 = 0
#DIM CONST 旗艦追従 = 1
#DIM CONST 旗艦 = 2

#DIM SHIP_ID
#DIM FREET_ID
#DIM 所属ID
#DIM 旗艦一覧, MAX_FREET
#DIM ERROR


ERROR = 0
VARSET 旗艦一覧, -1

FOR SHIP_ID, 0, MAX_SHIP
	SIF SHIP_COUNTRY:SHIP_ID != 国家ID_プレイヤー
		CONTINUE
	所属ID = -1
	FOR FREET_ID, 0, MAX_FREET
		IF FREET_FORMATION:SHIP_ID:FREET_ID != 自由 && 所属ID == -1
			所属ID = FREET_ID
		ELSEIF FREET_FORMATION:SHIP_ID:FREET_ID != 自由 && 所属ID >= 0
			CALL ID2POS(SHIP_POSITION:SHIP_ID)
			SETCOLOR カラー_警告
			LOCALS = [{SHIP_ID, 4, RIGHT}] %SHIP_NAME:SHIP_ID, 40, LEFT% %SHIP_CATEGORY_NAME:(SHIP_CATEGORY:SHIP_ID), 12, LEFT% #{RESULT:0,2,RIGHT} X:{RESULT:1,2,RIGHT} Y:{RESULT:2,2,RIGHT} が複数艦隊に所属しています
			PRINTFORML %LOCALS%
			RESETCOLOR
			ERROR = 1
		ENDIF
		IF FREET_FORMATION:SHIP_ID:FREET_ID == 旗艦 && 旗艦一覧:FREET_ID != -1
			SETCOLOR カラー_警告
			PRINTFORML 第 {FREET_ID + 1} 艦隊の旗艦が重複しています
			RESETCOLOR
			ERROR = 1
		ELSEIF FREET_FORMATION:SHIP_ID:FREET_ID == 旗艦
			旗艦一覧:FREET_ID = SHIP_ID
		ENDIF
	NEXT
NEXT
;旗艦指定が必要な任務において、旗艦が指定されていない場合エラーとする
FOR SHIP_ID, 0, MAX_SHIP
	SIF SHIP_COUNTRY:SHIP_ID != 国家ID_プレイヤー
		CONTINUE
	FOR FREET_ID, 0, MAX_FREET
		IF FREET_FORMATION:SHIP_ID:FREET_ID == 旗艦追従 && 旗艦一覧:FREET_ID == -1
			SETCOLOR カラー_警告
			PRINTFORML 第 {FREET_ID + 1} 艦隊に追従対象の旗艦が設定されていません
			RESETCOLOR
			ERROR = 1
		ENDIF
	NEXT
NEXT
SIF ERROR
	RETURN 0
RETURN 1

@UPDATE_FREET(FREET_FORMATION)
#DIM REF FREET_FORMATION, 0, 0
#DIM CONST 自由 = 0
#DIM CONST 旗艦追従 = 1
#DIM CONST 旗艦 = 2

#DIM SHIP_ID
#DIM FREET_ID
#DIM 所属ID
#DIM 旗艦一覧, MAX_FREET
#DIM 任務

VARSET 旗艦一覧, -1

; 旗艦一覧を作成
FOR SHIP_ID, 0, MAX_SHIP
	SIF SHIP_COUNTRY:SHIP_ID != 国家ID_プレイヤー
		CONTINUE
	FOR FREET_ID, 0, MAX_FREET
		IF FREET_FORMATION:SHIP_ID:FREET_ID == 旗艦
			旗艦一覧:FREET_ID = SHIP_ID
			SIF SHIP_MISSION:SHIP_ID == 追従
				SHIP_MISSION:SHIP_ID = 待機
		ENDIF
	NEXT
NEXT

; 旗艦に艦を追従させる
FOR SHIP_ID, 0, MAX_SHIP
	SIF SHIP_COUNTRY:SHIP_ID != 国家ID_プレイヤー
		CONTINUE
	任務 = 自由
	FOR FREET_ID, 0, MAX_FREET
		IF FREET_FORMATION:SHIP_ID:FREET_ID == 旗艦追従
			SHIP_MISSION:SHIP_ID = 追従
			SHIP_FOLLOW:SHIP_ID = 旗艦一覧:FREET_ID
			任務 = 追従
		ELSEIF FREET_FORMATION:SHIP_ID:FREET_ID == 旗艦
			任務 = 旗艦
		ENDIF
	NEXT
	SIF 任務 != 追従 && SHIP_MISSION:SHIP_ID == 追従
		SHIP_MISSION:SHIP_ID = 待機
NEXT

@INIT_FREET_FORMATION(FREET_FORMATION)
