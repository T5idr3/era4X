	MESSAGE '= "CREW:",
	FOR LOCAL:1, 1, 50
		IF RESULT:(LOCAL:1) == -1
			SIF LOCAL:1 == 1
				MESSAGE += "－"
			BREAK
		ELSE
			人員:(RESULT:(LOCAL:1)) = -1
			IF LOCAL:1 < 8
				MESSAGE =%MESSAGE% %CALLNAME:(RESULT:(LOCAL:1))%
			ELSEIF LOCAL:1 == 8		;CREW多すぎるので以下省略
				MESSAGE =%MESSAGE% …
			ENDIF
		ENDIF
	NEXT
	PRINTBUTTON @"%MESSAGE%", (30000+SHIP_ID)
	PRINTL
