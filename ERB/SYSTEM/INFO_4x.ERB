	SIF CFLAG:RESULT:捕虜先 == 国家ID_プレイヤー || CFLAG:RESULT:所属 != 国家ID_プレイヤー
		GOTO CHANGE_BOARDER
	LOCAL = RESULT
	FINDELEMENT BOARDING_SHIP_ID, SHIP_ID
	IF RESULT != -1
		BOARDING_SHIP_ID:RESULT = -1
