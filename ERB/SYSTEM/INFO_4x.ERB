;;; @SHOW_INFO_ASSET()
;;;プレイヤー国家(1)管理下の船と人員を示す
;;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
@SHOW_INFO_ASSET()
#DIM ID
#DIM SHIP_ID
#DIM SHIP_POS
#DIMS strInputResult
#DIM CONST 個別指定モード = 0
#DIM CONST 艦隊編成モード = 1
#DIM MODE
#DIM FREET_FORMATION, MAX_SHIP, MAX_FREET
#DIM 入力値
#DIM FREET_PAGE

MODE = 0
FREET_PAGE = 0
CALL GET_FREET_FORMATION(FREET_FORMATION)

$INPUT_LOOP
SELECTCASE MODE
	CASE 個別指定モード
		CALL SHOW_INFO_ASSET_SUB(1)
		CALL GET_FREET_FORMATION(FREET_FORMATION)
	CASE 艦隊編成モード
		CALL SHOW_FLEET_FORMATION(FREET_FORMATION, FREET_PAGE)
ENDSELECT
;画面表示
PRINTL 
PRINTL [999999] 戻る

INPUTS

strInputResult '= RESULTS
ISNUMERIC strInputResult
IF RESULT:0
	TOINT strInputResult
	入力値 = RESULT

	IF	入力値 == 999999
		CALL ERROR_CHECK_FREET(FREET_FORMATION)
		SIF RESULT == 0
			GOTO INPUT_LOOP
		CALL UPDATE_FREET(FREET_FORMATION)
		RETURN

	;タブ変更
	ELSEIF INRANGE(入力値, MAX_SHIP * MAX_FREET, MAX_SHIP * MAX_FREET + 1)
		MODE = RESULT - (MAX_SHIP * MAX_FREET)
		GOTO INPUT_LOOP

	; 艦隊編成モードなら専用の入力判定へ
	ELSEIF MODE == 艦隊編成モード
		CALL INPUT_FREET_FORMATION(入力値, FREET_FORMATION, FREET_PAGE)
		GOTO INPUT_LOOP

	;SHIP詳細	SHIP_ID (0-9999?かな 9998かな？)
	ELSEIF 入力値 >=0 && 入力値 < MAX_SHIP
		SHIP_ID = 入力値
	;	SIF SHIP_COUNTRY:SHIP_ID == 国家ID_プレイヤー
	;	CALL SHOW_SHIP_INFO(SHIP_ID)
		CALL SHOW_SHIP_WINDOW_INFO(SHIP_ID)
		GOTO INPUT_LOOP


	;タスク変更　;;
	;; タスク変更　10000 +SHIP_ID
	;;これ毎回めんどいループすることになっちゃう
	ELSEIF 入力値 >= 10000 && 入力値 < 20000
		SHIP_ID = 入力値 - 10000
		IF SHIP_COUNTRY:(SHIP_ID) == 国家ID_プレイヤー
			IF CHARACTER_POSITION:MASTER /10000 == SHIP_POSITION:SHIP_ID /10000   ;;あなたと選択船のセクターが同じならok
				CALL CHANGE_TASK(SHIP_ID)
			;;あなたが　星かPORTにいたらおＫ
			ELSE
				CALL GET_PORT_NAME(CHARACTER_POSITION:MASTER)
				IF 入力値:0 >= 1
					CALL CHANGE_TASK(SHIP_ID)
				ELSE
					PRINTFORM 　%CALLNAME:MASTER% が港にいない時は同宙域のみ有効です
					PRINTW
				ENDIF
			ENDIF
			GOTO INPUT_LOOP
		ENDIF
	;人員変更
	;; 艦長更新　20000 +SHIP_ID  // 乗組員変更　30000+SHIP_ID
	ELSEIF 入力値 >= 20000 && 入力値 < 30000
		SHIP_ID = 入力値 - 20000
		SIF SHIP_COUNTRY:(SHIP_ID) == 国家ID_プレイヤー
			CALL CHANGE_BOARDER(SHIP_ID)
		GOTO INPUT_LOOP
	ELSEIF 入力値 >=30000 && 入力値 < 40000
		SHIP_ID = 入力値 - 30000
		SIF SHIP_COUNTRY:(SHIP_ID) == 国家ID_プレイヤー
			CALL CHANGE_CREW(SHIP_ID)
		GOTO INPUT_LOOP

	;星系表示
	;; ( -10000 -SHIP_ID )
	ELSEIF 入力値 <= -10000 && 入力値 > -20000
		SHIP_ID = (-1)*( 入力値 +10000 )
		SHIP_POS = SHIP_POSITION:SHIP_ID
		CALL DRAW_WINDOW( SHIP_POS / 10000 , SHIP_POS , SHIP_ID , 0 )

		WAITANYKEY
		GOTO INPUT_LOOP
	;メニューから抜ける
	ENDIF
ELSE

	CALL CHAGE_SHIP_FILTERCAGTEGORY(strInputResult)
	CALL CHAGE_SHIP_FILTERMISSION(strInputResult)
	GOTO INPUT_LOOP
ENDIF

RETURN


