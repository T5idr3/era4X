;着衣処理もろもろ
;-------------------------------------------------
;着衣の初期化処理
;-------------------------------------------------
@CLOTHES_INITIALIZE
REPEAT 7
	A = 40+COUNT
	CFLAG:A = CSVCFLAG(NO:TARGET, A, 0)
REND

;-------------------------------------------------
;服の名前を関数で呼び出せるようにする。A+40の数値でCFLAGの数値を分岐
;-------------------------------------------------
@CLOTHES_NAME
;STR:0を読み込んでしまうバグを修正
IF CFLAG:(A+40) != 0
	D = CFLAG:(A+40)
ELSE
	D = 40
ENDIF
PRINTS STR:D


@EVENTTRAIN
#PRI
;服装の着用
REPEAT 7
	A = COUNT+40
	TEQUIP:COUNT = CFLAG:A
REND

;初期着衣設定に応じて、服の設定をする
;前回設定
IF FLAG:1 == 4
	A = 1
	REPEAT 7
		SIF (CFLAG:23 & A) == 0
			TEQUIP:COUNT = 0
		A *= 2
	REND
;全裸
ELSEIF FLAG:1 == 3
	REPEAT 7
		TEQUIP:COUNT = 0
	REND
;下着姿
ELSEIF FLAG:1 == 2
	TEQUIP:4 = 0
	TEQUIP:5 = 0
	TEQUIP:6 = 0
;半脱ぎ
ELSEIF FLAG:1 == 1
	TEQUIP:2 = 0
	TEQUIP:3 = 0
ENDIF

@EVENTTURNEND
IF TARGET >= 0
	;着衣状態の保存処理
	A = 1
	CFLAG:23 = 0
	REPEAT 7
		SIF TEQUIP:COUNT
			CFLAG:23 |= A
		A *= 2
	REND
ENDIF


