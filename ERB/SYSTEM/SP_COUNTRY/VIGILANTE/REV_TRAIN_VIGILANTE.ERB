;-------------------------------------------------
;参加者選択アルゴリズム
;-------------------------------------------------
@VIGILANTE_REV_TRAIN_CHOOSE_PARTICIPANT(勢力)
#DIM 勢力
FOR LOCAL:0, 0, 4
	;確率で犬豚が対象に
	FOR LOCAL:1, 0, CHARANUM
		IF TALENT:(LOCAL:1):特殊勢力素質 == 特殊勢力_自警団 && !CFLAG:(LOCAL:1):調教参加フラグ && CFLAG:(LOCAL:1):所属 == 勢力
			CFLAG:(LOCAL:1):調教参加フラグ = 1
			CFLAG:(LOCAL:1):TEXT_LAST非表示 = 1
			BREAK
		ENDIF
	NEXT
NEXT
