;--------------------------------------
;蜂起イベントが発生するかの判定
;--------------------------------------
@SUCCUBUS_RISE_RATE()

;既に出現しているか、勢力なし設定なら発動しない
SIF SP_COUNTRY_APPEARED:特殊勢力_サキュバス || !SP_COUNTRY_RANK:(特殊勢力_サキュバス)
	RETURN 0

;いっぱいなら駄目
SIF GET_NEW_COUNTRY() == -1
	RETURN 0


SIF !CHECK_SP_COUNTRY_RISE(特殊勢力_サキュバス)
	RETURN 0
RETURN 1

;--------------------------------------
;サキュバス出現イベント
;出現できたら1、できなければ0をかえす
;--------------------------------------
@SUCCUBUS_RISE(都市 = 0)
#DIM サキュバス
#DIM 都市

;サキュバス勢力を作成
CALL SUCCUBUS_INIT()
サキュバス = RESULT
;作れなかったら戻す
SIF サキュバス == 0
	RETURN 0

CALL SP_COUNTRY_RISE(サキュバス, 都市)

SIF !RESULT
	RETURN 0

SP_COUNTRY_APPEARED:特殊勢力_サキュバス = 1
RETURN サキュバス

