;----------------------
; コミュニケーション
;----------------------
@COMMUNICATION
#DIM AT_STAR
#DIM STAR_ID

AT_STAR = 0
FOR STAR_ID, 0, 星系数
	SIF CHARACTER_POSITION != 星系座標ID:STAR_ID
		CONTINUE
	AT_STAR = 1
NEXT

$INPUT_LOOP

PRINTL [0] - お茶に誘う
SIF AT_STAR == 1
	PRINTL [1] - デートに誘う
PRINTL [9] - 戻る

INPUT
IF RESULT == 0
	CALL COMMUNICATION_TEA
ELSEIF RESULT == 1
	CALL COMMUNICATION_DATE
	SIF RESULT == 0
		GOTO INPUT_LOOP
ELSEIF RESULT == 9
	RETURN 0
ELSE
	GOTO INPUT_LOOP
ENDIF
RETURN 1

;----------------------
; お茶に誘う
;----------------------
@COMMUNICATION_TEA
#DIM 恭順
#DIM 恭順倍率
#DIM 依存度

PRINTFORML %CALLNAME:TARGET%をお茶に誘った

SELECTCASE RAND:5
	CASE 0
		PRINTW 会話がとても捗った！
		恭順倍率 = 125
		依存度 = 75
	CASE 1 TO 3
		PRINTW そこそこ会話が盛り上がった
		恭順倍率 = 100
		依存度 = 50
	CASE 4
		PRINTW あまり会話が盛り上がらなかった
		恭順倍率 = 75
		依存度 = 25
ENDSELECT

SELECTCASE ABL:TARGET:0
	CASE 0
		恭順 = 20
	CASE 1
		恭順 = 100
	CASE 2
		恭順 = 200
	CASE 3
		恭順 = 400
	CASE 4
		恭順 = 800
	CASE 5
		恭順 = 1600
	CASE 6
		恭順 = 3200
	CASE 7
		恭順 = 6400
	CASE 8
		恭順 = 12800
	CASE 9
		恭順 = 25600
	CASE 10
		恭順 = 51200
ENDSELECT

恭順 = 恭順 * 恭順倍率 / 100
CFLAG:TARGET:2 += 依存度


JUEL:5 += 恭順
PRINTFORML 依存度 + {依存度}
PRINTFORMW 恭順の珠＋{恭順}

RETURN 1

;----------------------
; デート
;----------------------
@COMMUNICATION_DATE
#DIM 恭順
#DIM 恭順倍率
#DIM 依存度

PRINTFORML %CALLNAME:TARGET%をデートに誘った
IF CFLAG:TARGET:2 < 300
	PRINTW 断られてしまった……
	RETURN 0
ELSEIF CFLAG:TARGET:2 < 600
	PRINTL 断られてしまったが、代わりにお茶をすることになった
	PRINTW そこそこ盛り上がった
	恭順倍率 = 100
	依存度 = 50
ELSEIF CFLAG:TARGET:2 < 1200
	PRINTL OKをもらえた
	PRINTW 盛り上がった！
	恭順倍率 = 200
	依存度 = 100
ENDIF

SELECTCASE ABL:TARGET:0
	CASE 0
	恭順 = 20
	CASE 1
	恭順 = 100
	CASE 2
	恭順 = 200
	CASE 3
	恭順 = 600
	CASE 4
	恭順 = 1200
	CASE 5
	恭順 = 2400
	CASE 6
	恭順 = 4800
	CASE 7
	恭順 = 9600
	CASE 8
	恭順 = 18200
	CASE 9
	恭順 = 32400
	CASE 10
	恭順 = 64800
ENDSELECT

恭順 = 恭順 * 恭順倍率 / 100
CFLAG:TARGET:2 += 依存度


JUEL:5 += 恭順
PRINTFORML 依存度 + {依存度}
PRINTFORMW 恭順の珠＋{恭順}

RETURN 1

;----------------------
; コミュニケーション後
;----------------------
@AFTER_COMMUNICATION

IF !TALENT:TARGET:親愛 && !TALENT:TARGET:恋慕 && ABL:TARGET:0 > 4
	PRINTFORML 最近%CALLNAME:TARGET%が%CALLNAME:MASTER%を見る目がおかしい。
	PRINTFORML どうやら%CALLNAME:TARGET%は%CALLNAME:MASTER%に惚れたようだ。
	PRINTFORMW %CALLNAME:TARGET%は恋慕を身に付けた
	PRINTL 
	TALENT:TARGET:恋慕 = 1
ENDIF

IF (TALENT:TARGET:恋慕 || TALENT:TARGET:親愛)  && CFLAG:TARGET:1016 == 0
	PRINTFORML %CALLNAME:TARGET%は別れ惜しそうにしている
	CALL ASK_YN("告白しますか？")
	IF RESULT == 1
		PRINTFORML %CALLNAME:TARGET%は%CALLNAME:MASTER%の告白を満面の笑みで受け入れた
		PRINTFORMW 純愛ルートを達成しました。
		CFLAG:TARGET:1016 = 1
	ELSE
		PRINTFORML 特に何を言うでもなくそのまま別れた
	ENDIF
ENDIF
