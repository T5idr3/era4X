@P_COM_NAME_0
RESULTS = 普通に歌う

@P_COM_BODY_0(MEMBER, VOLTAGE)
#DIM REF MEMBER
#DIM REF VOLTAGE
#DIM UP_VOLTAGE, 3
#DIM CONST BASE_VOLTAGE = 10
#DIM ID
#DIM BONUS

VARSET UP_VOLTAGE, 0


FINDELEMENT MEMBER, 0
FOR ID, 0, RESULT
  UP_VOLTAGE:(CFLAG:(MEMBER:ID):1017 - 1) += (BASE_VOLTAGE / RESULT)
  IF CFLAG:(MEMBER:ID):1018 > 10000
    UP_VOLTAGE:(CFLAG:(MEMBER:ID):1017 - 1) += 10
  ELSEIF CFLAG:(MEMBER:ID):1018 > 5000
    UP_VOLTAGE:(CFLAG:(MEMBER:ID):1017 - 1) += 8
  ELSEIF CFLAG:(MEMBER:ID):1018 > 5000
    UP_VOLTAGE:(CFLAG:(MEMBER:ID):1017 - 1) += 6
  ELSEIF CFLAG:(MEMBER:ID):1018 > 3000
    UP_VOLTAGE:(CFLAG:(MEMBER:ID):1017 - 1) += 4
  ELSEIF CFLAG:(MEMBER:ID):1018 > 1500
    UP_VOLTAGE:(CFLAG:(MEMBER:ID):1017 - 1) += 3
  ELSEIF CFLAG:(MEMBER:ID):1018 > 750
    UP_VOLTAGE:(CFLAG:(MEMBER:ID):1017 - 1) += 2
  ELSEIF CFLAG:(MEMBER:ID):1018 > 300
    UP_VOLTAGE:(CFLAG:(MEMBER:ID):1017 - 1) += 1
  ENDIF
NEXT
SIF UP_VOLTAGE:0 > 0
  PRINTFORML CUTE VOLTAGE UP! + {UP_VOLTAGE:0}
SIF UP_VOLTAGE:1 > 0
  PRINTFORML PASSION VOLTAGE UP! + {UP_VOLTAGE:1}
SIF UP_VOLTAGE:2 > 0
  PRINTFORML COOL VOLTAGE UP! + {UP_VOLTAGE:2}
FOR ID, 0, 3
  VOLTAGE:ID += UP_VOLTAGE:ID
NEXT
WAIT

@P_COM_MESSAGE_0(MEMBER)
