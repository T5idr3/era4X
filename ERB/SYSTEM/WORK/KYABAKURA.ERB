;------------------------
; キャバクラ
;------------------------
@KYABAKURA(ID)
#DIM ID
#DIM POINT
#DIM GET_MONEY

POINT = 0
;ABL
POINT += ABL:ID:0 * 100
POINT += ABL:ID:7 * 100
POINT += ABL:ID:22 * 200

;TALENT
SIF TALENT:ID:11
	POINT -= 100
SIF TALENT:ID:13
	POINT += 100
SIF TALENT:ID:15
	POINT -= 100
SIF TALENT:ID:16
	POINT -= 100
SIF TALENT:ID:63
	POINT += 200
SIF TALENT:ID:82
	POINT -= 200
SIF TALENT:ID:87
	POINT += 100
SIF TALENT:ID:92
	POINT += 100
SIF TALENT:ID:93
	POINT += 100
SIF TALENT:ID:94
	POINT += 100
SIF TALENT:ID:109
	POINT -= 200
SIF TALENT:ID:110
	POINT -= 100
SIF TALENT:ID:111
	POINT += 100
SIF TALENT:ID:112
	POINT += 200

POINT = LIMIT(POINT, 0, 9999)

PRINTFORM %CALLNAME:ID%はキャバクラで
SELECTCASE RAND:3
	CASE 0
		PRINTFORML 安物のスーツに身を包んだサラリーマンの相手をした
		; 要求の低い客
		IF POINT > 1000
			CFLAG:ID:1002 += 50
			PRINTFORML どうやらうまく接客できたようだ
		ELSE
			CFLAG:ID:1002 -= 50
			PRINTFORML うまく接客できなかったようだ
		ENDIF
	CASE 1
		; 要求の普通の客
		PRINTFORML 小綺麗な身なりの男を相手にした
		IF POINT > 2000
			CFLAG:ID:1002 += 100
			PRINTFORML どうやらうまく接客できたようだ
		ELSE
			CFLAG:ID:1002 -= 50
			PRINTFORML うまく接客できなかったようだ
		ENDIF
	CASE 2
		; 要求の高い客
		PRINTFORML 高級ブランドに身を包んだ男の相手をした
		IF POINT > 3000
			CFLAG:ID:1003 += 200
			PRINTFORML どうやらうまく接客できたようだ
		ELSE
			CFLAG:ID:1002 -= 50
			PRINTFORML うまく接客できなかったようだ
		ENDIF
ENDSELECT

PRINTFORML 話術経験+5
EXP:ID:65 += 5

CFLAG:ID:1002 = LIMIT(CFLAG:ID:1002, 0, 100000)
GET_MONEY = POINT + CFLAG:ID:1002 - RAND:(POINT / 10)
GET_MONEY /= 10
PRINTFORML %CALLNAME:ID%は%TOSTR(GET_MONEY, "$###,###")%稼いできた
MONEY += GET_MONEY