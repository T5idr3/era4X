@SKILL_0_PERSONAL_36_EFFECT(VALUE, TYPE, CLASS, CHARA_ID)
#DIM VALUE
#DIM TYPE
#DIM CLASS
#DIM CHARA_ID

LOCAL = ABL:CHARA_ID:演技力ＰＡ
	IF LOCAL >= 100
		SIF TYPE == TYPE_命中
			TIMES VALUE, 1.12
		SIF TYPE == TYPE_対空命中
			TIMES VALUE, 1.12
		SIF TYPE == TYPE_与ダメージ
			TIMES VALUE, 1.12
		SIF TYPE == TYPE_被ダメージ
			TIMES VALUE, 1.12
	ELSEIF LOCAL >= 80
		SIF TYPE == TYPE_命中
			TIMES VALUE, 1.08
		SIF TYPE == TYPE_対空命中
			TIMES VALUE, 1.08
		SIF TYPE == TYPE_与ダメージ
			TIMES VALUE, 1.08
		SIF TYPE == TYPE_被ダメージ
			TIMES VALUE, 1.08
	ELSEIF LOCAL >= 60
		SIF TYPE == TYPE_命中
			TIMES VALUE, 1.04
		SIF TYPE == TYPE_対空命中
			TIMES VALUE, 1.04
		SIF TYPE == TYPE_与ダメージ
			TIMES VALUE, 1.04
		SIF TYPE == TYPE_被ダメージ
			TIMES VALUE, 1.04
	ELSE
		SIF TYPE == TYPE_命中
			TIMES VALUE, 1.02
		SIF TYPE == TYPE_対空命中
			TIMES VALUE, 1.02
		SIF TYPE == TYPE_与ダメージ
			TIMES VALUE, 1.02
		SIF TYPE == TYPE_被ダメージ
			TIMES VALUE, 1.02
	ENDIF
RETURN VALUE

