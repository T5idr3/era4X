RETURN 1

@SKILL_0_TROOP_15_NAME
RESULTS = 超銀河アイドル

;レベルは1-5まで
@SKILL_0_TROOP_15_LEVEL
RETURN 2
	
@SKILL_0_TROOP_15_EXPLANATION
RESULTS = 敵命中が『アイドル人気』によって-4～12\%の範囲で低下する。(必要アイドル人気10～30万)


@SKILL_0_TROOP_15_EFFECT(OWN_COUNTRY, ENEMY_COUNTRY, TARGET_ID)
#DIM OWN_COUNTRY
#DIM ENEMY_COUNTRY
#DIM TARGET_ID
#DIM OWN_COMMANDER

OWN_COMMANDER = -1

SIF SHIP_COUNTRY:TARGET_ID != ENEMY_COUNTRY
	RETURN

SIF SHIP_COUNTRY:TARGET_ID != OWN_COUNTRY || SHIP_COUNTRY:TARGET_ID != ENEMY_COUNTRY
	RETURN
SIF COMMANDER:0 >= 0 && COMMANDER:0 < CHARANUM && CFLAG:所属 == OWN_COUNTRY
	OWN_COMMANDER = COMMANDER:0
SIF COMMANDER:1 >= 0 && COMMANDER:1 < CHARANUM && CFLAG:所属 == OWN_COUNTRY
	OWN_COMMANDER = COMMANDER:1


LOCAL = P_アイドル人気:OWN_COMMANDER:0 
IF LOCAL >= 300000
	TIMES SKILL_EFFECT_PERCENTAGE:TYPE_命中率:TARGET_ID, 0.88
ELSEIF LOCAL >= 200000
	TIMES SKILL_EFFECT_PERCENTAGE:TYPE_命中率:TARGET_ID, 0.92
ELSEIF LOCAL >= 100000
	TIMES SKILL_EFFECT_PERCENTAGE:TYPE_命中率:TARGET_ID, 0.96
ELSE
	TIMES SKILL_EFFECT_PERCENTAGE:TYPE_命中率:TARGET_ID, 1.04
ENDIF


