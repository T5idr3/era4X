@SKILL_0_TROOP_14_EFFECT(VALUE, TYPE, CLASS, CH_ID)
#DIM VALUE
#DIM TYPE
#DIM CLASS
#DIM CH_ID

LOCAL = ABL:CH_ID:歌唱
	IF LOCAL >= 100
		IF TYPE == TYPE_命中 && (CLASS == コルベット || CLASS == フリゲート || CLASS == 駆逐艦 || CLASS == 艦種_航空機)
			TIMES VALUE, 1.30
		ELSEIF TYPE == TYPE_与ダメージ && (CLASS == コルベット || CLASS == フリゲート || CLASS == 駆逐艦 || CLASS == 艦種_航空機)
			TIMES VALUE, 1.30
		ELSEIF TYPE == TYPE_回避 && (CLASS == 巡洋艦 || CLASS == 戦艦 || CLASS == 空母)
			TIMES VALUE, 0.40
		ENDIF
	ELSE
		IF TYPE == TYPE_命中 && (CLASS == コルベット || CLASS == フリゲート || CLASS == 駆逐艦 || CLASS == 艦種_航空機)
			TIMES VALUE, 1.06
		ELSEIF TYPE == TYPE_与ダメージ && (CLASS == コルベット || CLASS == フリゲート || CLASS == 駆逐艦 || CLASS == 艦種_航空機)
			TIMES VALUE, 1.06
		ELSEIF TYPE == TYPE_回避 && (CLASS == 巡洋艦 || CLASS == 戦艦 || CLASS == 空母)
			TIMES VALUE, 0.88
		ENDIF
	ENDIF
RETURN VALUE


