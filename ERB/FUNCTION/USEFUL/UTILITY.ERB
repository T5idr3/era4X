@ASK_YN(MESSAGE)
#DIMS MESSAGE

$INPUT_LOOP
PRINTFORML %MESSAGE%
PRINTBUTTON "[0] はい", 0
PRINTL
PRINTBUTTON "[1] いいえ", 1
INPUT
IF RESULT == 0
	RETURN 1
ELSEIF RESULT == 1
	RETURN 0
ELSE
	GOTO INPUT_LOOP
ENDIF

@ASK_SELECT(MESSAGE, SELECT1, SELECT2)
#DIMS MESSAGE
#DIMS SELECT1
#DIMS SELECT2

$INPUT_LOOP
PRINTFORML %MESSAGE%
PRINTBUTTON @"[1] %SELECT1%", 1
PRINTL
PRINTBUTTON @"[2] %SELECT2%", 2
PRINTL

INPUT
IF RESULT == 1
	RETURN 1
ELSEIF RESULT == 2
	RETURN 2
ELSE
	GOTO INPUT_LOOP
ENDIF