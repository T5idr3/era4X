@IS_FALL(CHARA_ID)
#FUNCTION
#DIM CHARA_ID
SIF TALENT:CHARA_ID:恋慕 == 1 || TALENT:CHARA_ID:親愛 == 1 || TALENT:CHARA_ID:服従 == 1 || TALENT:CHARA_ID:隷属 == 1
	RETURNF 1
RETURNF 0

@ASK_YESNO(MESSAGE)
#DIMS MESSAGE

$INPUT_LOOP
PRINTFORML %MESSAGE%
PRINTBUTTON "[0] はい", 0
PRINTL
PRINTBUTTON "[1] いいえ", 1
INPUT
IF RESULT == 0
	RETURN 1
ELSEIF RESULT == 1
	RETURN 0
ELSE
	GOTO INPUT_LOOP
ENDIF

@ASK_SELECT(MESSAGE, SELECT1, SELECT2)
#DIMS MESSAGE
#DIMS SELECT1
#DIMS SELECT2

$INPUT_LOOP
PRINTFORML %MESSAGE%
PRINTBUTTON @"[1] %SELECT1%", 1
PRINTL
PRINTBUTTON @"[2] %SELECT2%", 2
PRINTL

INPUT
IF RESULT == 1
	RETURN 1
ELSEIF RESULT == 2
	RETURN 2
ELSE
	GOTO INPUT_LOOP
ENDIF

@GET_BUSTSIZE_STR(BREAST_SIZE)
#FUNCTIONS
#DIM BREAST_SIZE
SELECTCASE BREAST_SIZE
	CASE -2
		RETURNF "絶壁"
	CASE -1
		RETURNF "貧乳"
	CASE 0
		RETURNF "並乳"
	CASE 1
		RETURNF "巨乳"
	CASE 2
		RETURNF "爆乳"
ENDSELECT