@GET_MAIN_WEAPON_NAME_205
RESULTS = 速射式生体粒子砲

@GET_MAIN_WEAPON_STATUS_205(STATUS)
#DIM REF STATUS

STATUS:DAMAGE = 100
STATUS:FIRE_RATE = 10
STATUS:HIT_RATE = 60
STATUS:FIRE_RANGE = 1
STATUS:SIZE = 1
STATUS:WEAPON_TYPE = ビーム
STATUS:PRICE = 40000

;-----------------------------------
; メインウェポンの説明
;-----------------------------------
@GET_MAIN_WEAPON_DESCRIPTION_205
#DIM STATUS, STATUS_LENGTH

CALL GET_MAIN_WEAPON_STATUS_205(STATUS)
CALL GET_MAIN_WEAPON_NAME_205
PRINTFORML %RESULTS%
PRINTFORML ダメージ  : {STATUS:DAMAGE}
PRINTFORML 射撃レート: {STATUS:FIRE_RATE}発/ターン
PRINTFORML 命中率    : {STATUS:HIT_RATE}
PRINTFORML 有効距離  : {STATUS:FIRE_RANGE}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; メインウェポンの資材
;-----------------------------------
@GET_MAIN_WEAPON_RESOURCE_205(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:武装合金 = 20
USE_RESOURCE:武装制御機器 = 25

@IS_SALE_MAIN_WEAPON_205
RETURN 0
