@GET_SUB_WEAPON_NAME_40
RESULTS = TIER1散弾ランチャー

@GET_SUB_WEAPON_STATUS_40(STATUS)
#DIM REF STATUS

STATUS:DAMAGE = 15
STATUS:FIRE_RATE = 1
STATUS:ANTI_AIR = 100
STATUS:HIT_RATE = 100
STATUS:FIRE_RANGE = 1
STATUS:SIZE = 1
