@GET_SUB_WEAPON_NAME_202
RESULTS = 対空粒子砲

@GET_SUB_WEAPON_STATUS_202(STATUS)
#DIM REF STATUS

STATUS:DAMAGE = 15
STATUS:FIRE_RATE = 15
STATUS:ANTI_AIR = 30
STATUS:HIT_RATE = 70
STATUS:FIRE_RANGE = 1
STATUS:SIZE = 1
STATUS:WEAPON_TYPE = ビーム
STATUS:PRICE = 40000

;-----------------------------------
; サブウェポンの説明
;-----------------------------------
@GET_SUB_WEAPON_DESCRIPTION_202
#DIM STATUS, STATUS_LENGTH

CALL GET_SUB_WEAPON_STATUS_202(STATUS)
CALL GET_SUB_WEAPON_NAME_202
PRINTFORML %RESULTS%
PRINTFORML ダメージ  : {STATUS:DAMAGE}
PRINTFORML 射撃レート: {STATUS:FIRE_RATE}発/ターン
PRINTFORML 対空攻撃力: {STATUS:ANTI_AIR}
PRINTFORML 命中率    : {STATUS:HIT_RATE}
PRINTFORML 有効距離  : {STATUS:FIRE_RANGE}
PRINTFORML サイズ    : {STATUS:SIZE}

;-----------------------------------
; サブウェポンの資材
;-----------------------------------
@GET_SUB_WEAPON_RESOURCE_202(USE_RESOURCE)
#DIM REF USE_RESOURCE

USE_RESOURCE:武装合金 = 12
USE_RESOURCE:武装制御機器 = 16

@IS_SALE_SUB_WEAPON_202
RETURN 0
