			PRINTFORML {PERFORMER_SCORES:(5 - RANK), 4, RIGHT}pt
			RESETCOLOR
		ELSE
			PRINTL 
		ENDIF
	NEXT
	PRINTL 
	DRAWLINE
	FORCEWAIT
	SIF ITER == 1
		BREAK
	CLEARLINE 7
NEXT

RETURN WIN

