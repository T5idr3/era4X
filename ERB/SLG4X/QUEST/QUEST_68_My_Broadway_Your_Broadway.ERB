;--------------------------
; ギャラクティック・ブロードウェイの参加演目をもとに
; ライバルをランダムに設定し変数にセット
;--------------------------
@QUEST_68_SET_RIVAL
#DIM ITER
#DIM RIVAL_COUNT
#DIM RIVAL_REVENGE

RIVAL_REVENGE = 4
WHILE RIVAL_REVENGE
	RIVAL_COUNT = 0
	FOR ITER, 0, QUEST_68_MAX_RIVAL
		SIF QUEST_68_RIVAL_PROGRAM:ITER != QUEST_68_演目
			CONTINUE
		TRYCCALLFORM QUEST_68_RIVAL_{ITER}
			SIF !RESULT
				CONTINUE
		CATCH
			CONTINUE
		ENDCATCH
		SIF QUEST_68_HAS_WON_RIVAL(QUEST_68_参加者, ITER) && RAND:RIVAL_REVENGE
			CONTINUE
		RIVAL_COUNT++
		SIF RAND:RIVAL_COUNT == 0
			QUEST_68_対戦相手 = ITER
	NEXT
	SIF RIVAL_COUNT
		RETURN
	RIVAL_REVENGE /= 4
WEND

THROW 対戦可能なライバルが存在しません

