CUSTOMDRAWLINE /
RESETCOLOR
PRINTBUTTON @"　[これで決定 - %TOSTR(FENCE_PRICE," $ ###,###,###,###,###,###,###"), 28, RIGHT%]", 999

PRINTFORML 
PRINTBUTTON @"　[止めておく]", 998

