@QUEST_15_CHOSE_MEMBER(参加メンバー, 分割分母, ADD = 1)
#DIM REF 参加メンバー
#DIM 分割分母
#DIM ADD
#DIM 参加候補, MAX_CHARA_NUM
#DIM ITER
#DIM 参加人数


VARSET 参加候補, -1

ITER = 0
FOR LOCAL, 0, CHARANUM
	SIF !CFLAG:LOCAL:初期キャラ || CFLAG:LOCAL:所属 == 国家ID_プレイヤー
		CONTINUE
	参加候補:ITER = LOCAL
	ITER ++
NEXT
参加人数 = ITER / 分割分母
SIF ITER % 分割分母
	参加人数 ++
ITER = 0

; TODO もっと効率的に書けるはず...
WHILE ITER < 参加人数
	LOCAL = RAND:CHARANUM
	IF CFLAG:LOCAL:初期キャラ && CFLAG:LOCAL:所属 != 国家ID_プレイヤー
		SIF ADD
			CFLAG:LOCAL:所属 = 国家ID_プレイヤー
		参加メンバー:ITER = LOCAL
		ITER ++
	ENDIF
WEND

RETURN ITER
