SIF CURRENT_TAB == ARMY
    SETCOLOR 0X00FF00
PRINTBUTTON " 軍事力 ", ARMY
RESETCOLOR
PRINT │
SIF CURRENT_TAB == HISTORY
    SETCOLOR 0X00FF00
PRINTBUTTON " 歴史 ", HISTORY
RESETCOLOR
PRINT │
PRINTBUTTON "戻る", 9
PRINTL │
