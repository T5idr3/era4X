@INFORMATION_INDEX
#DIM CURRENT_TAB
#DIM CONST TOP = 0
#DIM CONST RESOURCE = 1
#DIM CONST ARMY = 2
#DIM CONST HISTORY = 3
#DIM PAGE
#DIM COUNTRY_PAGE
#DIM PORT_COUNT

CURRENT_TAB = TOP
PAGE = 1
COUNTRY_PAGE = 0

FINDELEMENT PORT_POSITION_ID, -1
PORT_COUNT = RESULT

$INPUT_LOOP
PRINTL
PRINTL ◆インフォメーション
CALL SHOW_INFORMATION_TAB(CURRENT_TAB)

IF CURRENT_TAB == TOP
    CALL SHOW_INFORMATION_TOP(PAGE)
ELSEIF CURRENT_TAB == RESOURCE
    CALL SHOW_INFORMATION_RESOURCE(PAGE, COUNTRY_PAGE)
ELSEIF CURRENT_TAB == ARMY
    CALL SHOW_INFORMATION_ARMY(PAGE, COUNTRY_PAGE)
ELSEIF CURRENT_TAB == HISTORY
    CALL SHOW_INFORMATION_HISTORY(PAGE)
ENDIF
INPUT

IF RESULT == TOP
    IF CURRENT_TAB != TOP
        PAGE = 1
        COUNTRY_PAGE = 0
    ENDIF
    CURRENT_TAB = TOP
ELSEIF RESULT == RESOURCE
    IF CURRENT_TAB != TOP
        PAGE = 1
        COUNTRY_PAGE = 0
    ENDIF
    CURRENT_TAB = RESOURCE
ELSEIF RESULT == ARMY
    IF CURRENT_TAB != TOP
        PAGE = 1
        COUNTRY_PAGE = 0
    ENDIF
    CURRENT_TAB = ARMY
ELSEIF RESULT == HISTORY
    IF CURRENT_TAB != HISTORY
        PAGE = 1
        COUNTRY_PAGE = 0
    ENDIF
    CURRENT_TAB = HISTORY
ELSEIF RESULT == 9
    RETURN
ELSEIF RESULT == 101
    PAGE = LIMIT(PAGE - 1, 1, MAX_COUNTRY - 1)
ELSEIF RESULT == 102
    PAGE = LIMIT(PAGE + 1, 1, MAX_COUNTRY - 1)
ELSEIF RESULT == 201
    COUNTRY_PAGE = LIMIT(COUNTRY_PAGE - 1, 0, MAX_STAR - 5)
ELSEIF RESULT == 202
    COUNTRY_PAGE = LIMIT(COUNTRY_PAGE + 1, 0, MAX_STAR - 5)
ENDIF
GOTO INPUT_LOOP

