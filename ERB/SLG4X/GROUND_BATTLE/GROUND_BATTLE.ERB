@GROUND_BATTLE_INIT
VARSET 師団所属, -1
VARSET 師団練度, -1
VARSET 師団付大隊, -1
VARSET 師団タイプ, -1
VARSET 師団装備, -1

@EDIT_GROUND_BATTLE_UNIT(ID = -1)
#DIM ID
IF ID == -1
  FINDELEMENT 師団所属, -1
  IF RESULT == -1
    ID = 0
  ELSE
    ID = RESULT
  ENDIF
ENDIF
$INPUT_LOOP

DRAWLINE
PRINTL 師団編成



@SAVE_GROUND_BATTLE_UNIT(SIDE, 熟練度, 支援大隊 = -1, 師団, 装備, ID = -1)
#DIM SIDE
#DIM 熟練度
#DIM 支援大隊
#DIM 師団
#DIM 装備
#DIM ID

IF ID == -1
  FINDELEMENT 師団所属, -1
  IF RESULT == -1
    ID = 0
  ELSE
    ID = RESULT
  ENDIF
ENDIF

師団所属:ID = SIDE
師団練度:ID = 熟練度
師団付大隊:ID = 支援大隊
師団タイプ:ID = 師団
師団装備:ID = 装備

