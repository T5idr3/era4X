PRINTFORML %"副砲スロット", 20, LEFT% {SHIP_STATUS:SHIP_SUB_WEAPON_SLOT, 12, RIGHT}
PRINTFORML %"シールドスロット", 20, LEFT% {SHIP_STATUS:SHIP_SIELD_SLOT, 12, RIGHT}
