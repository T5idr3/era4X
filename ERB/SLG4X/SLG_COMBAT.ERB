@FIRE_TO_TARGET(ATK_SHIP_ID, DEF_SHIP_ID, ATK_SHIP_POS)
#DIM ATK_SHIP_ID
#DIM DEF_SHIP_ID
#DIM ATK_SHIP_POS
#DIM COUNTER
#DIM HIT_COUNTER
#DIM ITER
#DIM WEAPON_STATUS, STATUS_LENGTH

;主砲による攻撃
FOR COUNTER, 0, MAX_SLOT
	TRYCALLFORM GET_SHIP_MAIN_WEAPON_STATUS(ATK_SHIP_ID, COUNTER, WEAPON_STATUS)
	;攻撃側のスキル効果設定
	CALL MERGE_SKILL_EFFECT_TO_WEAPON_STATUS(WEAPON_STATUS, ATK_SHIP_ID)
	HIT_COUNTER = CHECK_WEAPON_ATTACK_IS_HIT(WEAPON_STATUS, ATK_SHIP_POS)
