		NEXT
	ENDIF
	TRYCALLFORM GET_MAIN_WEAPON_STATUS_{SHIP_EQUIP:副砲:COUNTER:ATK_SHIP_ID}(WEAPON_STATUS)
	HIT_COUNTER = CHECK_WEAPON_ATTACK_IS_HIT(WEAPON_STATUS, ATK_SHIP_POS)
	IF HIT_COUNTER > 0
		FOR ITER, 0, HIT_COUNTER
			CALL BATTLE_DAMAGE(WEAPON_STATUS, ATK_SHIP_ID, DEF_SHIP_ID)
		NEXT
	ENDIF
NEXT
;副砲による攻撃
FOR COUNTER, 0, MAX_SLOT
	TRYCALLFORM GET_SHIP_SUB_WEAPON_STATUS(ATK_SHIP_ID, COUNTER, WEAPON_STATUS)
	;攻撃側のスキル効果設定
