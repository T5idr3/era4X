;--------------------------
; AI ACTION 機械文明
;--------------------------
@SLG_AI_ACTION_6,
#DIM CONST COUNTRY_ID = 6


@GET_STANDING_ARMY_6,(UNIT)
#DIM REF UNIT

UNIT:イージスシールド駆逐艦 = 30
UNIT:カラドボルグ級戦艦 = 5

@GET_INVASION_ARMY_6,(UNIT)
#DIM REF UNIT

UNIT:イージスシールド駆逐艦 = 30
UNIT:カラドボルグ級戦艦 = 5

@AI_ARMED_BUILDUP_6,(STAR_ID)
#DIM STAR_ID
#DIM DYNAMIC UNIT_LIST, SHIP_CLASS_TOTAL_COUNT
#DIM DYNAMIC NEW_SHIP_ID

CALL GET_STANDING_ARMY_6,(UNIT_LIST)

; 艦の生産
FOR LOCAL, 0, MAX_SHIP
    SIF SHIP_POSITION:LOCAL != 星系座標ID:STAR_ID
        CONTINUE
    SIF SHIP_COUNTRY:LOCAL != 国家ID_機械文明
        CONTINUE
    SIF UNIT_LIST:(SHIP_MODEL:LOCAL) > 0
        UNIT_LIST:(SHIP_MODEL:LOCAL) --
    CALL AI_UPDATE_WEAPON_6,(LOCAL)
NEXT
FOR LOCAL, 0, SHIP_CLASS_TOTAL_COUNT
    SIF UNIT_LIST:LOCAL > 0
        CALL BUILD_SHIP(星系座標ID:STAR_ID, 国家ID_機械文明, 国家ID_機械文明, LOCAL, ,NEW_SHIP_ID)
NEXT

; 最小で最大の成果を求めて設計されたドクトリン
; 建造スロット、バグを生まない役割の単純さ、効率を求めた機械文明らしいドクトリン。武装は前半は前衛が実体弾でシールドを削り、残った後衛がビームで装甲を削るために分けられている
@AI_UPDATE_WEAPON_6,(SHIP_ID)
#DIM SHIP_ID
#DIM DYNAMIC SHIP_STATUS, SHIP_STATUS_LENGTH

TRYCALLFORM GET_SHIP_STATUS_{SHIP_MODEL:SHIP_ID}(SHIP_STATUS)

SELECTCASE SHIP_MODEL:SHIP_ID
    CASE イージスシールド駆逐艦
        ;メインウェポン
        FOR LOCAL, 0, SHIP_STATUS:SHIP_MAIN_WEAPON_SLOT
            IF !SHIP_EQUIP:主砲:LOCAL:SHIP_ID != 6 && !IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_MAIN_WEAPON(SHIP_ID, 6, 6, LOCAL)
            ELSEIF !SHIP_EQUIP:主砲:LOCAL:SHIP_ID != 8 && IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_MAIN_WEAPON(SHIP_ID, 6, 8 , LOCAL)
            ENDIF
        NEXT
        ;サブウェポン
        FOR LOCAL, 0, SHIP_STATUS:SHIP_SUB_WEAPON_SLOT
            IF !SHIP_EQUIP:副砲:LOCAL:SHIP_ID != 2 && !IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_SUB_WEAPON(SHIP_ID, 6, 2, LOCAL)
            ELSEIF !SHIP_EQUIP:副砲:LOCAL:SHIP_ID != 2 && IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_SUB_WEAPON(SHIP_ID, 6, 2, LOCAL)
            ENDIF
        NEXT
        ;シールド
        FOR LOCAL, 0, SHIP_STATUS:SHIP_SIELD_SLOT
            IF !SHIP_EQUIP:シールド:LOCAL:SHIP_ID != 6 && !IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_SIELD(SHIP_ID, 6, 6, LOCAL)
            ELSEIF !SHIP_EQUIP:シールド:LOCAL:SHIP_ID != 10 && IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_SIELD(SHIP_ID, 6, 10, LOCAL)
            ENDIF
        NEXT
        ;装甲
        FOR LOCAL, 0, SHIP_STATUS:SHIP_ARMOR_SLOT
            IF !SHIP_EQUIP:装甲:LOCAL:SHIP_ID != 6 && !IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_ARMOR(SHIP_ID, 6, 6, LOCAL)
            ELSEIF !SHIP_EQUIP:装甲:LOCAL:SHIP_ID != 10 && IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_ARMOR(SHIP_ID, 6, 10, LOCAL)
            ENDIF
        NEXT
        ;エンジン
        IF !SHIP_EQUIP:エンジン:LOCAL:SHIP_ID != 6 && !IS_COMPLETE_TECH:OVER_TECH
            CALL CHANGE_ENGIN(SHIP_ID, 6, 6)
        ELSEIF !SHIP_EQUIP:エンジン:LOCAL:SHIP_ID != 10 && IS_COMPLETE_TECH:OVER_TECH
            CALL CHANGE_ENGIN(SHIP_ID, 6, 10)
        ENDIF
        ;コンピューター
        IF !SHIP_EQUIP:AI:LOCAL:SHIP_ID != 2 && !IS_COMPLETE_TECH:OVER_TECH
            CALL CHANGE_COMPUTER(SHIP_ID, 6, 2)
        ELSEIF !SHIP_EQUIP:AI:LOCAL:SHIP_ID != 3 && IS_COMPLETE_TECH:OVER_TECH
            CALL CHANGE_COMPUTER(SHIP_ID, 6, 3)
        ENDIF
    CASE カラドボルグ級戦艦
        ;メインウェポン
        FOR LOCAL, 0, SHIP_STATUS:SHIP_MAIN_WEAPON_SLOT
            IF !SHIP_EQUIP:主砲:LOCAL:SHIP_ID != 43 && !IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_MAIN_WEAPON(SHIP_ID, 6, 43, LOCAL)
            ELSEIF !SHIP_EQUIP:主砲:LOCAL:SHIP_ID != 43 && IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_MAIN_WEAPON(SHIP_ID, 6, 43, LOCAL)
            ENDIF
        NEXT
        ;サブウェポン
        FOR LOCAL, 0, SHIP_STATUS:SHIP_SUB_WEAPON_SLOT
            IF !SHIP_EQUIP:副砲:LOCAL:SHIP_ID != 17 && !IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_SUB_WEAPON(SHIP_ID, 6, 17, LOCAL)
            ELSEIF !SHIP_EQUIP:副砲:LOCAL:SHIP_ID != 18 && IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_SUB_WEAPON(SHIP_ID, 6, 18, LOCAL)
            ENDIF
        NEXT
        ;シールド
        FOR LOCAL, 0, SHIP_STATUS:SHIP_SIELD_SLOT
            IF !SHIP_EQUIP:シールド:LOCAL:SHIP_ID != 8 && !IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_SIELD(SHIP_ID, 6, 8, LOCAL)
            ELSEIF !SHIP_EQUIP:シールド:LOCAL:SHIP_ID != 12 && IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_SIELD(SHIP_ID, 6, 12, LOCAL)
            ENDIF
        NEXT
        ;装甲
        FOR LOCAL, 0, SHIP_STATUS:SHIP_ARMOR_SLOT
            IF !SHIP_EQUIP:装甲:LOCAL:SHIP_ID != 8 && !IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_ARMOR(SHIP_ID, 6, 8, LOCAL)
            ELSEIF !SHIP_EQUIP:装甲:LOCAL:SHIP_ID != 12 && IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_ARMOR(SHIP_ID, 6, 12, LOCAL)
            ENDIF
        NEXT
        ;エンジン
        IF !SHIP_EQUIP:エンジン:LOCAL:SHIP_ID != 8 && !IS_COMPLETE_TECH:OVER_TECH
            CALL CHANGE_ENGIN(SHIP_ID, 6, 8)
        ELSEIF !SHIP_EQUIP:エンジン:LOCAL:SHIP_ID != 12 && IS_COMPLETE_TECH:OVER_TECH
            CALL CHANGE_ENGIN(SHIP_ID, 6, 12)
        ENDIF
        ;コンピューター
        IF !SHIP_EQUIP:AI:LOCAL:SHIP_ID != 2 && !IS_COMPLETE_TECH:OVER_TECH
            CALL CHANGE_COMPUTER(SHIP_ID, 6, 2)
        ELSEIF !SHIP_EQUIP:AI:LOCAL:SHIP_ID != 3 && IS_COMPLETE_TECH:OVER_TECH
            CALL CHANGE_COMPUTER(SHIP_ID, 6, 3)
        ENDIF
ENDSELECT
