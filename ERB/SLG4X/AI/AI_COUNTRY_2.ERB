            ELSEIF !SHIP_EQUIP:装甲:LOCAL:SHIP_ID != 9 && IS_COMPLETE_TECH:OVER_TECH
                CALL CHANGE_ARMOR(SHIP_ID, 2, 9, LOCAL)
