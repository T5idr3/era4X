			ENDIF
		ENDIF
	NEXT
ELSEIF RESULT == -2
	RETURN
ELSE
	_EQUIP_TYPE = RESULT / 100
	_SLOT_ID = RESULT % 100
	IF GROUPMATCH(_EQUIP_TYPE, 主砲, 副砲, シールド, 装甲, オプション)
		TRYCALLFORM EQUIP_UPDATE_{_EQUIP_TYPE}(SHIP_ID, OWNER, _SLOT_ID, 1)
	ELSE
		TRYCALLFORM EQUIP_UPDATE_{_EQUIP_TYPE}(SHIP_ID, OWNER, 1)
	ENDIF
	GOTO INPUT_LOOP
