;強精神薬
;特殊コマンド
;-------------------------------------------------
@COM191
PRINTL 強精神薬
STR:0 = 強精神薬
CALL KOJO_MESSAGE_COM

ITEM:47 -= 1
TEQUIP:34 = 7

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 20
LOSEBASE:1 += 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:16 += 1000

;依存度ベクトル
TFLAG:33 = 0


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM191
IF TEQUIP:34 > 2
	PRINTL ＜強精神薬効果発揮中＞
	TEQUIP:34 -= 1
ELSEIF TEQUIP:34 == 2
	TEQUIP:34 = 1
	PRINTFORML %CALLNAME:TARGET%の強精神剤の効果が切れたようだ
	PRINTL ＜強精神薬反動中＞
ELSEIF TEQUIP:34 == 1
	PRINTL ＜強精神薬反動中＞
ENDIF


RETURN 1

