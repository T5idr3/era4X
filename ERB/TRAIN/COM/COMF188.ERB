@COM188
PRINTL シャワー
STR:0 = シャワー
CALL KOJO_MESSAGE_COM

;着脱の処理　装備時はソース、経験の加算は行わない
IF TEQUIP:32 == 1
	TEQUIP:32 = 0
ELSE
	TEQUIP:32 = 1
ENDIF

;依存度ベクトル
TFLAG:33 = 0


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM188
;シャワー使用中

PRINTL ＜シャワー使用中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 0
LOSEBASE:1 += 10

SOURCE:12 += 100
SOURCE:16 += 100
SOURCE:18 += 50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;吸血鬼（流水の中では動けないため、いろいろ追加）
IF TALENT:吸血鬼
	SOURCE:8 += 200
	SOURCE:14 += 200
	SOURCE:15 += 500
	SOURCE:17 += 500
	SOURCE:18 += 500
ENDIF

;動物耳の場合（まぁ基本洗われるのは嫌と解釈）
IF TALENT:動物耳
	SOURCE:8 += 100
	SOURCE:14 += 100
	SOURCE:17 += 500
	SOURCE:18 += 500
ENDIF


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;シャワーで汚れは常にリセット
STAIN:0 = 0
STAIN:1 = 0
STAIN:2 = 2
STAIN:3 = 1
STAIN:4 = 8
STAIN:5 = 0
STAIN:6 = 0

;潤滑を1000減らす
IF PALAM:4 > 1000
	PALAM:4 -= 1000
ELSE
	PALAM:4 = 0
ENDIF

RETURN 1

