;-------------------------------------------------
;母乳飲み
;奉仕系コマンド、レベル4
;-------------------------------------------------
@COM89
PRINTL 母乳飲み
;-------------------------------------------------
;実行決定
;-------------------------------------------------
STR:0 = 母乳飲み
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 50
LOSEBASE:1 += 180

SOURCE:4 = 1000
SOURCE:6 = 1000
SOURCE:12 = 2000
SOURCE:14 = 1800
SOURCE:17 = 100
SOURCE:18 = 100


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者の口の汚れが移動
	STAIN:5 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:5

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 5
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;愛情経験
IF (TALENT:恋慕 == 1 || TALENT:親愛 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:愛情経験 += 1
ENDIF

;依存度ベクトル
TFLAG:33 = 4

;依存度補正値(主人かつ恋慕で1、親愛で2）
IF TALENT:恋慕 && ASSIPLAY == 0
	TFLAG:30 += 2
ELSEIF TALENT:親愛 && ASSIPLAY == 0
	TFLAG:30 += 4
ENDIF


RETURN 1

