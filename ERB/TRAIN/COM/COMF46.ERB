;-------------------------------------------------
;アナルビーズ
;道具使用コマンド、レベル3
;-------------------------------------------------
@COM46
PRINTL アナルビーズ
STR:0 = アナルビーズ
CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:15 == 0
	TEQUIP:15 = 1
ELSE
	TEQUIP:15 = 0
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 60
LOSEBASE:1 += 150

SOURCE:2 = 150
SOURCE:7 = 200
SOURCE:13 = 50
SOURCE:14 = 50
SOURCE:17 = 60
SOURCE:18 = 80

;装着時は快Aは下がる
SIF TEQUIP:15 == 1
	TIMES SOURCE:2 , 0.80

;外す時は快Aは上がる
SIF TEQUIP:15 == 0
	TIMES SOURCE:2 , 3.00

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:16 += 70

;Aへの苦痛は先に処理しておく
;EXP:Ａ経験をみる
IF EXP:Ａ経験 < EXPLV:1
	TIMES SOURCE:7 , 3.00
	TIMES SOURCE:18 , 3.00
ELSEIF EXP:Ａ経験 < EXPLV:2
	TIMES SOURCE:7 , 1.20
	TIMES SOURCE:18 , 2.00
ELSEIF EXP:Ａ経験 < EXPLV:3
	TIMES SOURCE:7 , 0.80
	TIMES SOURCE:18 , 1.50
ELSEIF EXP:Ａ経験 < EXPLV:4
	TIMES SOURCE:7 , 0.60
	TIMES SOURCE:18 , 1.20
ELSEIF EXP:Ａ経験 < EXPLV:5
	TIMES SOURCE:7 , 0.40
ELSEIF EXP:Ａ経験 >= EXPLV:5
	TIMES SOURCE:7 , 0.20
ENDIF

;PALAM:潤滑をみる
IF PALAM:4 < PALAMLV:1
	TIMES SOURCE:7 , 1.20
	TIMES SOURCE:18 , 2.00
ELSEIF PALAM:4 < PALAMLV:2
	TIMES SOURCE:7 , 1.00
	TIMES SOURCE:18 , 1.50
ELSEIF PALAM:4 < PALAMLV:3
	TIMES SOURCE:7 , 0.60
ELSEIF PALAM:4 < PALAMLV:4
	TIMES SOURCE:7 , 0.30
ELSEIF PALAM:4 >= PALAMLV:4
	TIMES SOURCE:7 , 0.20
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF TEQUIP:19 == 0
	EXP:Ａ経験 += 1
	PRINTL Ａ経験＋１
ELSEIF TEQUIP:19 == 1
	EXP:Ａ経験 += 2
	PRINTL Ａ経験＋２
ENDIF

A = 1
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;依存度ベクトル
TFLAG:33 = 3


RETURN 1


