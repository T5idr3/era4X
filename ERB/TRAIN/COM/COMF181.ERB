;媚薬
;特殊コマンド
;-------------------------------------------------
@COM181
PRINTL 媚薬
STR:0 = 媚薬
CALL KOJO_MESSAGE_COM

SIF TEQUIP:25 == 0
	ITEM:41 -= 1

TEQUIP:26 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
;調教者が調合知識を持っていれば消費を抑えられる
IF TALENT:PLAYER:調合知識
	LOSEBASE:0 += 150
	LOSEBASE:1 += 150
ELSE
	LOSEBASE:0 += 300
	LOSEBASE:1 += 300
ENDIF

;媚薬効果で欲情のアップが2倍になるので実際には+5000
UP:6 = 2500
SOURCE:17 = 1000


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 1
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;依存度ベクトル
TFLAG:33 = 0


RETURN 1

