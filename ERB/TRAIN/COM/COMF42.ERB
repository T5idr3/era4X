;-------------------------------------------------
;クリキャップ
;道具使用コマンド、レベル2
;-------------------------------------------------
@COM42
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
IF TEQUIP:25
	PRINTL 触手クリ責め
	STR:0 = 触手クリ責め
	SELECTCOM = 163
ELSE
	PRINTL 電動クリキャップ
	STR:0 = 電動クリキャップ
ENDIF
CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:11 == 0
	TEQUIP:11 = 1
ELSE
	TEQUIP:11 = 0
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:0 += 10
LOSEBASE:1 += 80

SOURCE:0 = 200
SOURCE:13 = 20
SOURCE:17 = 30
SOURCE:18 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:16 += 30

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手クリ責めなら、触手体液がヴァギナに付く
SIF TEQUIP:25
	STAIN:3 |= 32

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 1
B = NO:PLAYER + 899
IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
	CFLAG:B += A
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
	CFLAG:B += A
ENDIF

;触手召喚時、触手経験のリセットをする
SIF TEQUIP:25 == 1
	T = 0

;依存度ベクトル
TFLAG:33 = 1


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM42
IF TEQUIP:25
	PRINTL ＜触手クリ責め中＞
ELSE
	PRINTL ＜クリキャップ装備中＞
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:0 += 5
LOSEBASE:1 += 20

SOURCE:0 += 100
SOURCE:13 += 10
SOURCE:17 += 15
SOURCE:18 += 15


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;触手経験加算
SIF TEQUIP:25 == 1
	T += 1


RETURN 1

