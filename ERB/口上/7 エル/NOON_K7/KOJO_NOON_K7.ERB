;─────────────────────────────────────── 
;●コマンド実行前日常300～
;─────────────────────────────────────── 
@KOJO_K7_NOON(エル_対象,前後)
#DIM エル
#DIM エル_対象
#DIMS 前後
#DIMS エル口上実対カテゴリ

IF !エル_対象
	エル_対象 = MASTER
ENDIF

;リセット
エル = NAME_TO_CHARA("エル")
エル口上実対カテゴリ '= ""

;─────────────────────────────────────── 
;●詳細カテゴリ決定
;─────────────────────────────────────── 
IF IS_MPLY(エル)
	エル口上実対カテゴリ '= "実行"
ELSE
	エル口上実対カテゴリ '= "エル_対象"
ENDIF

;─────────────────────────────────────── 
;●詳細カテゴリによる分岐
;─────────────────────────────────────── 
IF エル口上実対カテゴリ == "実行"
	;前文か後文か
	IF 前後 == "前"
		CALL KOJO_K7_NOON_BEFORE_PLAYER(エル_対象)
	ELSEIF 前後 == "後"
		CALL KOJO_K7_NOON_AFTER_PLAYER(エル_対象)
	ENDIF
ELSEIF エル口上実対カテゴリ == "エル_対象"
	;前文か後文か
	IF 前後 == "前"
		CALL KOJO_K7_NOON_BEFORE_TARGET(エル_対象)
	ELSEIF 前後 == "後"
		CALL KOJO_K7_NOON_AFTER_TARGET(エル_対象)
	ENDIF
ENDIF

RESETCOLOR
RETURN RESULT

