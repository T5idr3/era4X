@IS_IN_PORT_K7
#FUNCTION

FOR COUNT, 0, MAX_STAR
	IF STAR_POSITION_ID:COUNT == CHARACTER_POSITION
		RETURNF 1
	ENDIF
NEXT
FOR COUNT, 0, MAX_PORT
	IF PORT_POSITION_ID:COUNT == CHARACTER_POSITION
		RETURNF 1
	ENDIF
NEXT

RETURNF 0